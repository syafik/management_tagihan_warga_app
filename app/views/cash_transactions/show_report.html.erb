<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4 sm:py-6"
     data-controller="cash-report"
     data-cash-report-current-year-value="<%= params[:year] %>"
     data-cash-report-current-month-value="<%= params[:month] %>"
     data-cash-report-report-type-value="<%= params[:type] %>"
     data-cash-report-starting-year-value="<%= AppSetting.starting_year %>">

  <!-- Header Section - Mobile Optimized -->
  <div class="bg-white shadow-sm rounded-2xl overflow-hidden mb-4 border border-gray-100">
    <div class="px-4 py-4 sm:px-6 sm:py-5 bg-gradient-to-r from-blue-600 to-indigo-600">
      <div class="flex flex-col space-y-3">
        <div class="flex items-center justify-between">
          <div class="flex items-center space-x-3">
            <div class="w-10 h-10 bg-white bg-opacity-20 rounded-xl flex items-center justify-center backdrop-blur-sm">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z"/>
              </svg>
            </div>
            <div>
              <h1 class="text-base sm:text-xl font-bold text-white">Laporan Keuangan</h1>
              <p class="text-xs text-blue-100 mt-0.5">Puri Ayana Gempol</p>
            </div>
          </div>
          <a href="<%= show_report_cash_transactions_path(params[:type], params[:year], params[:month], format: :pdf) %>"
             target="_blank"
             class="inline-flex items-center px-3 py-2 bg-white text-blue-600 font-medium text-xs sm:text-sm rounded-lg hover:bg-blue-50 active:bg-blue-100 transition-colors shadow-sm">
            <svg class="w-4 h-4 sm:mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
            </svg>
            <span class="hidden sm:inline">PDF</span>
          </a>
        </div>
      </div>
    </div>
    
    <!-- Month Navigation - Mobile Optimized -->
    <div class="px-4 py-3 bg-gray-50">
      <%
        current_month = params[:month].to_i
        current_year = params[:year].to_i
        starting_year = AppSetting.starting_year
        is_at_beginning = (current_year == starting_year && current_month == 1)
        is_at_end = (current_year == 2050 && current_month == 12)
      %>
      <div class="flex items-center justify-between gap-2">
        <% if is_at_beginning %>
          <div class="p-2 rounded-lg bg-gray-100 text-gray-400 cursor-not-allowed">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
            </svg>
          </div>
        <% else %>
          <button class="p-2 rounded-lg bg-white border border-gray-200 text-gray-700 hover:bg-gray-50 active:bg-gray-100 transition-colors shadow-sm"
                  data-action="click->cash-report#navigateMonth"
                  data-direction="prev">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
            </svg>
          </button>
        <% end %>

        <div class="flex-1 text-center">
          <div class="inline-flex items-center px-4 py-2 bg-white rounded-xl shadow-sm border border-blue-200">
            <svg class="w-4 h-4 text-blue-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
            </svg>
            <span class="text-sm sm:text-lg font-bold text-blue-600" data-cash-report-target="monthDisplay">
              <%= UserContribution::MONTHNAMES.invert[current_month] %> <%= current_year %>
            </span>
          </div>
        </div>

        <% if is_at_end %>
          <div class="p-2 rounded-lg bg-gray-100 text-gray-400 cursor-not-allowed">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
          </div>
        <% else %>
          <button class="p-2 rounded-lg bg-white border border-gray-200 text-gray-700 hover:bg-gray-50 active:bg-gray-100 transition-colors shadow-sm"
                  data-action="click->cash-report#navigateMonth"
                  data-direction="next">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
          </button>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Report Table - Desktop -->
  <div class="hidden lg:block bg-white shadow-lg rounded-lg overflow-hidden">
    <div class="overflow-x-auto">
      <table class="w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="w-12 px-3 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">No</th>
            <th class="w-24 px-3 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Tanggal</th>
            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Deskripsi</th>
            <th class="w-32 px-3 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Jumlah</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @report_items.each_with_index do |ri, i| %>
            <tr class="hover:bg-gray-50">
              <td class="px-3 py-4 whitespace-nowrap text-sm text-gray-900 text-center"><%= i+1 %></td>
              <td class="px-3 py-4 whitespace-nowrap text-sm text-gray-900"><%= ri[1] %></td>
              <td class="px-4 py-4 text-sm text-gray-900 font-medium"><%= ri[2] %></td>
              <td class="px-3 py-4 whitespace-nowrap text-sm font-semibold text-right <%= ri[0] == 'cash_in' ? 'text-green-600' : 'text-red-600' %>">
                <%= ri[0] == 'cash_in' ? '+' : '-' %><%= number_to_currency(ri[3], unit: "Rp ", separator: ",", delimiter: ".") %>
              </td>
            </tr>
          <% end %>
        </tbody>
        <tfoot class="bg-gray-100">
          <tr class="border-t-2 border-gray-300">
            <td colspan="3" class="px-4 py-4 text-sm font-bold text-gray-900 text-right">
              <div class="flex justify-end space-x-6">
                <div>
                  <span>Total Pemasukan:</span>
                  <span class="text-green-600 font-bold">
                    <%= number_to_currency(@debit_total, unit: "Rp ", separator: ",", delimiter: ".") %>
                  </span>
                </div>
                <div>
                  <span>Total Pengeluaran:</span>
                  <span class="text-red-600 font-bold">
                    <%= number_to_currency(@credit_total, unit: "Rp ", separator: ",", delimiter: ".") %>
                  </span>
                </div>
              </div>
            </td>
            <td class="px-3 py-4 text-right">
              <div class="text-xs text-gray-500">TOTAL</div>
            </td>
          </tr>
          <tr class="bg-gray-200">
            <td colspan="3" class="px-4 py-4 text-sm font-bold text-gray-900 text-right">
              <span class="text-lg">SISA SALDO</span>
            </td>
            <td class="px-3 py-4 whitespace-nowrap text-lg font-bold text-right <%= @debit_total - @credit_total >= 0 ? 'text-green-600' : 'text-red-600' %>">
              <div class="flex flex-col items-end">
                <span>
                  <%= @debit_total - @credit_total >= 0 ? '+' : '' %><%= number_to_currency(@debit_total - @credit_total, unit: "Rp ", separator: ",", delimiter: ".") %>
                </span>
                <div class="text-xs font-normal <%= @debit_total - @credit_total >= 0 ? 'text-green-500' : 'text-red-500' %>">
                  <%= @debit_total - @credit_total >= 0 ? 'Surplus' : 'Defisit' %>
                </div>
              </div>
            </td>
          </tr>
        </tfoot>
      </table>
    </div>
  </div>

  <!-- Summary Cards First - Mobile -->
  <div class="lg:hidden mb-4">
    <div class="grid grid-cols-2 gap-3 mb-3">
      <!-- Total Pemasukan Card -->
      <div class="bg-gradient-to-br from-green-500 to-emerald-600 rounded-xl p-3 shadow-sm">
        <div class="flex items-center mb-2">
          <div class="w-8 h-8 bg-white bg-opacity-20 rounded-lg flex items-center justify-center">
            <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
            </svg>
          </div>
        </div>
        <div class="text-xs text-green-100 font-medium mb-1">Pemasukan</div>
        <div class="text-base font-bold text-white truncate">
          <%= number_to_currency(@debit_total, unit: "Rp ", separator: ",", delimiter: ".") %>
        </div>
      </div>

      <!-- Total Pengeluaran Card -->
      <div class="bg-gradient-to-br from-red-500 to-rose-600 rounded-xl p-3 shadow-sm">
        <div class="flex items-center mb-2">
          <div class="w-8 h-8 bg-white bg-opacity-20 rounded-lg flex items-center justify-center">
            <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 12H4"/>
            </svg>
          </div>
        </div>
        <div class="text-xs text-red-100 font-medium mb-1">Pengeluaran</div>
        <div class="text-base font-bold text-white truncate">
          <%= number_to_currency(@credit_total, unit: "Rp ", separator: ",", delimiter: ".") %>
        </div>
      </div>
    </div>

    <!-- Sisa Saldo Card -->
    <div class="bg-gradient-to-br from-blue-600 to-indigo-600 rounded-xl p-4 shadow-sm">
      <div class="flex items-center justify-between">
        <div>
          <div class="text-xs text-blue-100 font-medium mb-1">Sisa Saldo</div>
          <div class="text-2xl font-bold text-white">
            <%= number_to_currency(@debit_total - @credit_total, unit: "Rp ", separator: ",", delimiter: ".") %>
          </div>
          <div class="inline-flex items-center mt-1 px-2 py-0.5 bg-white bg-opacity-20 rounded-full text-xs text-white">
            <%= @debit_total - @credit_total >= 0 ? '✓ Surplus' : '⚠ Defisit' %>
          </div>
        </div>
        <div class="w-12 h-12 bg-white bg-opacity-20 rounded-xl flex items-center justify-center">
          <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
        </div>
      </div>
    </div>
  </div>

  <!-- Transaction List - Mobile -->
  <div class="lg:hidden space-y-2">
    <div class="flex items-center justify-between px-1 mb-2">
      <h3 class="text-sm font-semibold text-gray-700">Daftar Transaksi</h3>
      <span class="text-xs text-gray-500"><%= @report_items.count %> transaksi</span>
    </div>
    <% @report_items.each_with_index do |ri, i| %>
      <div class="bg-white rounded-xl p-3 border border-gray-100 shadow-sm">
        <div class="flex items-start justify-between gap-3">
          <div class="flex-1 min-w-0">
            <div class="flex items-center gap-2 mb-1.5">
              <div class="w-8 h-8 rounded-lg flex items-center justify-center <%= ri[0] == 'cash_in' ? 'bg-green-100' : 'bg-red-100' %>">
                <% if ri[0] == 'cash_in' %>
                  <svg class="w-4 h-4 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                  </svg>
                <% else %>
                  <svg class="w-4 h-4 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 12H4"/>
                  </svg>
                <% end %>
              </div>
              <span class="text-xs text-gray-500"><%= ri[1] %></span>
            </div>
            <p class="text-sm font-medium text-gray-900 line-clamp-2"><%= ri[2] %></p>
          </div>
          <div class="text-right flex-shrink-0">
            <div class="text-sm font-bold <%= ri[0] == 'cash_in' ? 'text-green-600' : 'text-red-600' %>">
              <%= ri[0] == 'cash_in' ? '+' : '-' %><%= number_to_currency(ri[3], unit: "Rp ", separator: ",", delimiter: ".") %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Summary Cards - Desktop Only -->
  <div class="hidden lg:grid mt-6 grid-cols-1 gap-4 sm:grid-cols-3">
    <div class="bg-gradient-to-br from-green-50 to-emerald-50 border border-green-200 rounded-xl p-5 shadow-sm">
      <div class="flex items-center justify-between">
        <div class="flex-1">
          <div class="text-xs font-medium text-green-700 uppercase tracking-wide mb-2">Total Pemasukan</div>
          <div class="text-xl font-bold text-green-900">
            <%= number_to_currency(@debit_total, unit: "Rp ", separator: ",", delimiter: ".") %>
          </div>
        </div>
        <div class="w-12 h-12 bg-green-500 rounded-xl flex items-center justify-center shadow-sm">
          <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
          </svg>
        </div>
      </div>
    </div>

    <div class="bg-gradient-to-br from-red-50 to-rose-50 border border-red-200 rounded-xl p-5 shadow-sm">
      <div class="flex items-center justify-between">
        <div class="flex-1">
          <div class="text-xs font-medium text-red-700 uppercase tracking-wide mb-2">Total Pengeluaran</div>
          <div class="text-xl font-bold text-red-900">
            <%= number_to_currency(@credit_total, unit: "Rp ", separator: ",", delimiter: ".") %>
          </div>
        </div>
        <div class="w-12 h-12 bg-red-500 rounded-xl flex items-center justify-center shadow-sm">
          <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 12H4"/>
          </svg>
        </div>
      </div>
    </div>

    <div class="bg-gradient-to-br <%= @debit_total - @credit_total >= 0 ? 'from-blue-50 to-indigo-50 border-blue-200' : 'from-yellow-50 to-amber-50 border-yellow-200' %> border rounded-xl p-5 shadow-sm">
      <div class="flex items-center justify-between">
        <div class="flex-1">
          <div class="text-xs font-medium <%= @debit_total - @credit_total >= 0 ? 'text-blue-700' : 'text-yellow-700' %> uppercase tracking-wide mb-2">
            Sisa Saldo
          </div>
          <div class="text-xl font-bold <%= @debit_total - @credit_total >= 0 ? 'text-blue-900' : 'text-yellow-900' %>">
            <%= number_to_currency(@debit_total - @credit_total, unit: "Rp ", separator: ",", delimiter: ".") %>
          </div>
          <div class="text-xs <%= @debit_total - @credit_total >= 0 ? 'text-blue-600' : 'text-yellow-600' %> mt-1">
            <%= @debit_total - @credit_total >= 0 ? '✓ Surplus' : '⚠ Defisit' %>
          </div>
        </div>
        <div class="w-12 h-12 <%= @debit_total - @credit_total >= 0 ? 'bg-blue-500' : 'bg-yellow-500' %> rounded-xl flex items-center justify-center shadow-sm">
          <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
        </div>
      </div>
    </div>
  </div>
</div>


<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
  <!-- Header -->
  <div class="bg-white shadow rounded-lg mb-6">
    <div class="px-4 py-5 sm:px-6">
      <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between">
        <div>
          <h1 class="text-2xl font-bold text-gray-900">Daftar Tunggakan</h1>
          <p class="mt-1 text-sm text-gray-500">
            Periode: <%= @start_date.strftime('%B %Y') %> - <%= @cutoff_date.strftime('%B %Y') %> | Tunggakan ≥ <%= @threshold %> bulan
          </p>
        </div>
        <div class="mt-4 sm:mt-0">
          <span class="inline-flex items-center px-3 py-2 rounded-md text-sm font-medium bg-red-100 text-red-800">
            <svg class="mr-2 h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
            </svg>
            <%= @total_arrears_count %> Rumah Menunggak
          </span>
        </div>
      </div>
    </div>
  </div>

  <% if @arrears_data.empty? %>
    <!-- Empty State -->
    <div class="bg-white shadow rounded-lg">
      <div class="text-center py-12">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
        <h3 class="mt-2 text-sm font-medium text-gray-900">Tidak Ada Tunggakan</h3>
        <p class="mt-1 text-sm text-gray-500">Tidak ada rumah dengan tunggakan ≥ <%= @threshold %> bulan.</p>
      </div>
    </div>
  <% else %>
    <!-- Desktop Table View (hidden on mobile) -->
    <div class="hidden md:block bg-white shadow rounded-lg overflow-hidden">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              No
            </th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Blok Rumah
            </th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Kepala Keluarga
            </th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Kontak
            </th>
            <th scope="col" class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">
              Bayar 2025
            </th>
            <th scope="col" class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">
              Tunggakan Lama
            </th>
            <th scope="col" class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">
              Total Tunggakan
            </th>
            <th scope="col" class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">
              Status
            </th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @arrears_data.each_with_index do |data, index| %>
            <tr class="hover:bg-gray-50">
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= index + 1 %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="flex items-center">
                  <div class="flex-shrink-0 h-10 w-10">
                    <div class="h-10 w-10 rounded-full bg-indigo-100 flex items-center justify-center">
                      <span class="text-indigo-600 font-medium text-sm">
                        <%= data[:address].block_address.gsub(/[^A-Za-z]/, '').upcase %>
                      </span>
                    </div>
                  </div>
                  <div class="ml-4">
                    <div class="text-sm font-medium text-gray-900">
                      <%= data[:address].block_address.upcase %>
                    </div>
                  </div>
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm text-gray-900">
                  <%= data[:head_of_family]&.name || 'Tidak ada' %>
                </div>
                <% if data[:residents].count > 1 %>
                  <div class="text-xs text-gray-500">
                    + <%= data[:residents].count - 1 %> anggota keluarga
                  </div>
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= data[:head_of_family]&.phone_number || '-' %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-center">
                <div class="text-sm text-gray-900"><%= data[:total_paid_2025] %> / <%= data[:months_should_pay] %></div>
                <div class="text-xs text-gray-500">bulan</div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-center">
                <% if data[:initial_arrears] > 0 %>
                  <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-orange-100 text-orange-800">
                    <%= data[:initial_arrears] %> bulan
                  </span>
                <% else %>
                  <span class="text-sm text-gray-400">-</span>
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-center">
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= data[:arrears_months] >= 6 ? 'bg-red-100 text-red-800' : 'bg-yellow-100 text-yellow-800' %>">
                  <%= data[:arrears_months] %> bulan
                </span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-center">
                <% if data[:arrears_months] >= 6 %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                    <svg class="mr-1 h-4 w-4" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                    </svg>
                    Kritis
                  </span>
                <% else %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                    <svg class="mr-1 h-4 w-4" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
                    </svg>
                    Perhatian
                  </span>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <!-- Mobile Card View (hidden on desktop) -->
    <div class="md:hidden space-y-4">
      <% @arrears_data.each_with_index do |data, index| %>
        <div class="bg-white shadow rounded-lg overflow-hidden border-l-4 <%= data[:arrears_months] >= 6 ? 'border-red-500' : 'border-yellow-500' %>">
          <div class="px-4 py-5">
            <!-- Card Header -->
            <div class="flex items-start justify-between mb-4">
              <div class="flex items-center">
                <div class="flex-shrink-0 h-12 w-12">
                  <div class="h-12 w-12 rounded-full bg-indigo-100 flex items-center justify-center">
                    <span class="text-indigo-600 font-medium">
                      <%= data[:address].block_address.gsub(/[^A-Za-z]/, '').upcase %>
                    </span>
                  </div>
                </div>
                <div class="ml-3">
                  <h3 class="text-lg font-medium text-gray-900">
                    <%= data[:address].block_address.upcase %>
                  </h3>
                  <p class="text-sm text-gray-500">#<%= index + 1 %></p>
                </div>
              </div>
              <div class="flex-shrink-0">
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= data[:arrears_months] >= 6 ? 'bg-red-100 text-red-800' : 'bg-yellow-100 text-yellow-800' %>">
                  <%= data[:arrears_months] %> bulan
                </span>
              </div>
            </div>

            <!-- Card Body -->
            <div class="space-y-3">
              <div class="flex items-center">
                <svg class="h-5 w-5 text-gray-400 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                </svg>
                <div class="flex-1">
                  <p class="text-sm font-medium text-gray-900">
                    <%= data[:head_of_family]&.name || 'Tidak ada' %>
                  </p>
                  <% if data[:residents].count > 1 %>
                    <p class="text-xs text-gray-500">
                      + <%= data[:residents].count - 1 %> anggota keluarga
                    </p>
                  <% end %>
                </div>
              </div>

              <div class="flex items-center">
                <svg class="h-5 w-5 text-gray-400 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                </svg>
                <p class="text-sm text-gray-700">
                  <%= data[:head_of_family]&.phone_number || '-' %>
                </p>
              </div>

              <!-- Payment Details -->
              <div class="bg-gray-50 rounded-lg p-3 space-y-2">
                <div class="flex justify-between items-center">
                  <span class="text-xs text-gray-600">Pembayaran 2025:</span>
                  <span class="text-sm font-medium text-gray-900"><%= data[:total_paid_2025] %> / <%= data[:months_should_pay] %> bulan</span>
                </div>
                <% if data[:initial_arrears] > 0 %>
                  <div class="flex justify-between items-center">
                    <span class="text-xs text-gray-600">Tunggakan Lama:</span>
                    <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-orange-100 text-orange-800">
                      <%= data[:initial_arrears] %> bulan
                    </span>
                  </div>
                <% end %>
                <div class="flex justify-between items-center pt-2 border-t border-gray-200">
                  <span class="text-xs font-medium text-gray-700">Total Tunggakan:</span>
                  <span class="text-sm font-bold <%= data[:arrears_months] >= 6 ? 'text-red-600' : 'text-yellow-600' %>">
                    <%= data[:arrears_months] %> bulan
                  </span>
                </div>
              </div>

              <div class="flex items-center pt-2">
                <% if data[:arrears_months] >= 6 %>
                  <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-medium bg-red-100 text-red-800">
                    <svg class="mr-1.5 h-4 w-4" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                    </svg>
                    Status Kritis - Perlu Tindakan Segera
                  </span>
                <% else %>
                  <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                    <svg class="mr-1.5 h-4 w-4" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
                    </svg>
                    Perlu Perhatian
                  </span>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>

  <!-- Summary Footer -->
  <% if @arrears_data.any? %>
    <div class="mt-6 bg-blue-50 border border-blue-200 rounded-lg p-4">
      <div class="grid grid-cols-1 sm:grid-cols-3 gap-4 text-sm">
        <div class="text-gray-700">
          <div class="text-xs text-gray-500 mb-1">Periode</div>
          <div class="font-medium"><%= @start_date.strftime('%b %Y') %> - <%= @cutoff_date.strftime('%b %Y') %></div>
        </div>
        <div class="text-gray-700">
          <div class="text-xs text-gray-500 mb-1">Total Rumah Menunggak</div>
          <div class="font-medium text-red-600"><%= @total_arrears_count %> rumah</div>
        </div>
        <div class="text-gray-700">
          <div class="text-xs text-gray-500 mb-1">Threshold Minimum</div>
          <div class="font-medium">≥ <%= @threshold %> bulan</div>
        </div>
      </div>
      <div class="mt-3 pt-3 border-t border-blue-200">
        <p class="text-xs text-gray-600">
          <svg class="inline-block w-4 h-4 mr-1 text-blue-500" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
          </svg>
          Data menampilkan rumah yang memiliki warga terdaftar, tidak termasuk rumah dengan status FREE.
        </p>
      </div>
    </div>
  <% end %>
</div>

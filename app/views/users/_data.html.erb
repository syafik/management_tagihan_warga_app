<!-- Desktop table view -->
<div class="hidden md:block overflow-x-auto border border-gray-200 rounded-lg shadow">
  <table class="min-w-full divide-y divide-gray-200" id="table-content">
    <thead class="bg-gray-50">
    <tr>
      <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">No</th>
      <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= sort_link(@q, :email, 'Email',{}, {remote: true, class: 'ajax-request hover:text-gray-700'}) %></th>
      <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= sort_link(@q, :name, 'Name',{}, {remote: true, class: 'ajax-request hover:text-gray-700'}) %></th>
      <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= sort_link(@q, :address_block, 'Blok',{}, {remote: true, class: 'ajax-request hover:text-gray-700'}) %></th>
      <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= sort_link(@q, :role, 'Role',{}, {remote: true, class: 'ajax-request hover:text-gray-700'}) %></th>
      <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Action</th>
    </tr>
    </thead>
    <tbody class="bg-white divide-y divide-gray-200">
    <% @users.each_with_index do |user, i| %>
      <tr class="hover:bg-gray-50">
        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900"><%= (i + 1) + ((@pagy.page - 1) * @pagy.vars[:items]) %></td>
        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= user.email %></td>
        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
          <div class="flex items-center">
            <div class="flex-shrink-0 h-8 w-8">
              <div class="h-8 w-8 rounded-full bg-indigo-100 flex items-center justify-center">
                <span class="text-indigo-600 font-medium text-xs"><%= user.name.present? ? user.name.first.upcase : 'U' %></span>
              </div>
            </div>
            <div class="ml-3">
              <div class="text-sm font-medium text-gray-900"><%= user.name %></div>
              <% if user.phone_number.present? %>
                <div class="text-sm text-gray-500"><%= user.phone_number %></div>
              <% end %>
            </div>
          </div>
        </td>
        <td class="px-6 py-4 text-sm text-gray-900">
          <% if user.addresses.any? %>
            <div class="flex flex-wrap gap-1">
              <% user.addresses.each do |address| %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                  <%= address.block_address.upcase %>
                </span>
              <% end %>
            </div>
          <% else %>
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-500">
              Tidak ada
            </span>
          <% end %>
        </td>
        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
          <% if user.try(:role_name).present? %>
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
              <%= user.role_name %>
            </span>
          <% else %>
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-500">
              User
            </span>
          <% end %>
        </td>
        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium space-x-2">
          <%= link_to 'Lihat', user, class: 'inline-flex items-center px-2.5 py-1.5 border border-transparent text-xs font-medium rounded text-white bg-green-600 hover:bg-green-700' %>
          <% if current_user.is_admin? %>
            <%= link_to 'Ubah', edit_user_path(user), class: 'inline-flex items-center px-2.5 py-1.5 border border-transparent text-xs font-medium rounded text-white bg-blue-600 hover:bg-blue-700' %>
          <% end %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>

<!-- Mobile card view -->
<div class="md:hidden space-y-4">
  <% @users.each_with_index do |user, i| %>
    <div class="bg-white border border-gray-200 rounded-lg shadow-sm p-4">
      <div class="flex items-center justify-between mb-3">
        <div class="flex items-center">
          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800 mr-2">
            #<%= (i + 1) + ((@pagy.page - 1) * @pagy.vars[:items]) %>
          </span>
          <div class="flex items-center">
            <div class="flex-shrink-0 h-8 w-8">
              <div class="h-8 w-8 rounded-full bg-indigo-100 flex items-center justify-center">
                <span class="text-indigo-600 font-medium text-xs"><%= user.name.present? ? user.name.first.upcase : 'U' %></span>
              </div>
            </div>
            <div class="ml-2">
              <h3 class="text-sm font-semibold text-gray-900"><%= user.name %></h3>
            </div>
          </div>
        </div>
        <div class="flex space-x-1">
          <%= link_to 'Lihat', user, class: 'inline-flex items-center px-2 py-1 border border-transparent text-xs font-medium rounded text-white bg-green-600 hover:bg-green-700' %>
          <% if current_user.is_admin? %>
            <%= link_to 'Ubah', edit_user_path(user), class: 'inline-flex items-center px-2 py-1 border border-transparent text-xs font-medium rounded text-white bg-blue-600 hover:bg-blue-700' %>
          <% end %>
        </div>
      </div>
      
      <!-- User details -->
      <div class="space-y-2">
        <div>
          <dt class="text-xs font-medium text-gray-500">Email</dt>
          <dd class="text-sm text-gray-900"><%= user.email %></dd>
        </div>
        
        <% if user.phone_number.present? %>
          <div>
            <dt class="text-xs font-medium text-gray-500">No. Telepon</dt>
            <dd class="text-sm text-gray-900"><%= user.phone_number %></dd>
          </div>
        <% end %>
        
        <div class="flex justify-between items-center">
          <div>
            <dt class="text-xs font-medium text-gray-500">Blok</dt>
            <dd>
              <% if user.addresses.any? %>
                <div class="flex flex-wrap gap-1">
                  <% user.addresses.each do |address| %>
                    <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                      <%= address.block_address.upcase %>
                    </span>
                  <% end %>
                </div>
              <% else %>
                <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-500">
                  Tidak ada
                </span>
              <% end %>
            </dd>
          </div>
          
          <div>
            <dt class="text-xs font-medium text-gray-500">Role</dt>
            <dd>
              <% if user.try(:role_name).present? %>
                <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                  <%= user.role_name %>
                </span>
              <% else %>
                <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-500">
                  User
                </span>
              <% end %>
            </dd>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<div class="mt-6">
  <%== pagy_tailwind_nav(@pagy) %>
</div>
<div data-controller="user-form">
  <%= form_for(user, html: { class: "space-y-6" }) do |f| %>
    <%= errors_for(user) %>
    
    <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
      <div>
        <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.email_field :email, 
                          autofocus: true, 
                          class: "w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm", 
                          placeholder: "Alamat email" %>
      </div>

      <div>
        <%= f.label :name, "Nama Lengkap", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.text_field :name, 
                        class: "w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm", 
                        placeholder: "Nama lengkap" %>
      </div>

      <div>
        <%= f.label :phone_number, "No. Telepon", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.text_field :phone_number, 
                        class: "w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm", 
                        placeholder: "No. telepon" %>
      </div>

      <% unless current_user.is_warga? && current_user == user %>
        <div>
          <%= f.label :role, class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.select :role, 
                      [["Warga", 1], ["Admin", 2], ["Sekuriti", 3]], 
                      {}, 
                      {
                        data: { 
                          "user-form-target": "roleSelect",
                          action: "change->user-form#roleChanged"
                        },
                        class: "select-field-js w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm"
                      } %>
        </div>
      <% end %>
    </div>

    <% unless current_user.is_warga? && current_user == user %>
      <div data-user-form-target="addressBox" class="<%= user.is_security? ? "hidden": ""%>">
        <%= f.label :address_ids, "Blok Rumah", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.select :address_ids,
                    Address.select('id, block_address').order(:block_address).collect {|p| [ p.block_address.try(:upcase), p.id ] },
                    { selected: user.address_ids },
                    {
                      multiple: true,
                      data: { "user-form-target": "addressSelect" },
                      class: "select-field-js w-full"
                    } %>
        <p class="mt-1 text-sm text-gray-500">
          <svg class="inline-block w-4 h-4 mr-1 text-indigo-500" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
          </svg>
          <span class="hidden sm:inline">Cari dan pilih blok rumah dengan dropdown. Bisa pilih lebih dari satu.</span>
          <span class="sm:hidden">Tap untuk pilih blok. Bisa pilih lebih dari satu. Tap item yang dipilih untuk menghapus.</span>
        </p>
      </div>

      <div data-user-form-target="picBox" class="<%= user.is_security? ? "": "hidden"%>">
        <%= f.label :pic_blok, "PIC Blok", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.text_field :pic_blok,
                        class: "w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm",
                        placeholder: "PIC retribution" %>
      </div>

      <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
        <div class="flex items-center">
          <%= f.check_box :allow_manage_transfer,
                          class: "h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded" %>
          <%= f.label :allow_manage_transfer, "Izinkan Kelola Transfer", class: "ml-2 text-sm font-medium text-gray-700" %>
        </div>

        <div class="flex items-center">
          <%= f.check_box :allow_manage_expense,
                          class: "h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded" %>
          <%= f.label :allow_manage_expense, "Izinkan Kelola Pengeluaran", class: "ml-2 text-sm font-medium text-gray-700" %>
        </div>
      </div>
    <% end %>

    <div>
      <%= f.label :avatar, class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= f.file_field :avatar, 
                      class: "w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-medium file:bg-indigo-50 file:text-indigo-700 hover:file:bg-indigo-100" %>
    </div>

    <% if user.new_record? %>
      <div>
        <%= f.label :password, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.password_field :password, 
                           class: "w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm", 
                           placeholder: "Password" %>
      </div>
    <% end %>

    <div class="flex flex-col sm:flex-row gap-3 pt-6 border-t border-gray-200">
      <%= f.submit 'Simpan', 
                  class: 'inline-flex items-center justify-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500' %>
      <%= link_to 'Batal', users_path, 
                  class: 'inline-flex items-center justify-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500' %>
    </div>
  <% end %>
</div>
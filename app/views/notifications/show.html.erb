<div class="row">
  <div class="col-md-12 grid-margin stretch-card">
    <div class="card">
      <div class="card-body">
        <div class="d-sm-flex align-items-center mb-4">
          <h4 class="card-title mb-sm-0">Notification Detail</h4>
        </div>
          <div class="table-responsive rounded p-1">
            <table class="table">
              <thead></thead>
              <tbody>
              <tr>
                <td class="font-weight-bold">ID</td>
                <td><%= @notification.id %></td>
              </tr>
              <tr>
                <td class="font-weight-bold">title</td>
                <td><%= @notification.title %></td>
              </tr>
              <tr>
                <td class="font-weight-bold">Notif</td>
                <td><%= @notification.notif %></td>
              </tr>
              <tr>
                <td colspan="2">
                  <%= link_to 'Edit', edit_notification_path(@notification), class: 'btn btn-primary mr-2' if current_user.role == 2 %>
                  <%= link_to 'Back', notifications_path, class: 'btn btn-light'  %>
                </td>
              </tr>
              </tbody>
            </table>
          </div>
      </div>
    </div>
  </div>
</div>


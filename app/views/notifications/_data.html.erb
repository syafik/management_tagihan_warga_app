<div class="table-responsive border rounded p-1">
  <table class="table table-hover" id="table-content">
    <thead>
    <tr>
      <th class="font-weight-bold">No</th>
      <th class="font-weight-bold"><%= sort_link(@q, :title, 'Title',{}, {remote: true, class: 'ajax-request'}) %></th>
      <th class="font-weight-bold"><%= sort_link(@q, :notif, 'Notification',{}, {remote: true, class: 'ajax-request'}) %></th>
      <th class="font-weight-bold"><%= sort_link(@q, :created_at, 'Created At',{}, {remote: true, class: 'ajax-request'}) %></th>
      <th class="font-weight-bold">Action</th>
    </tr>
    </thead>
    <tbody>
    <% cur_page = @pagy.page %>
    <% @notifications.each_with_index do |notification, i| %>
      <tr>
        <td><%= (i + 1) + ((@pagy.page - 1) * @pagy.items) %> </td>
        <td><%= notification.title  %></td>
        <td><%= notification.notif.truncate(50) %></td>
        <td><%= notification.created_at.strftime("%m %B %Y") %></td>
        <td>
          <%= link_to 'Lihat', notification, class: 'btn-sm btn-success' %>
          <%= link_to 'Ubah', edit_notification_path(notification), class: 'btn-sm btn-info'  if current_user.is_admin? %>
          <%= link_to 'Destroy', notification, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn-sm btn-danger' if current_user.is_admin? %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>

<div class="d-flex mt-4 flex-wrap">
  <p class="text-muted">Showing <%= pagy_info(@pagy) %></p>
  <%== pagy_nav(@pagy) %>
</div>
<div class="min-h-screen bg-gray-50">
  <div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
    <div class="bg-white shadow-lg rounded-lg overflow-hidden">
      <div class="px-6 py-4 bg-gray-50 border-b border-gray-200">
        <h2 class="text-xl font-bold text-gray-900">Generate Data Tagihan</h2>
        <p class="text-sm text-gray-600 mt-1">Buat data tagihan untuk periode tertentu</p>
      </div>
      
      <div class="p-6" data-controller="import-form">
        <%= form_tag do_generate_data_user_contributions_path, 
                     class: 'space-y-6', 
                     data: { 
                       action: "submit->import-form#handleSubmit",
                       import_form_target: "form"
                     } do %>
          
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <!-- Bulan -->
            <div>
              <%= label_tag :bulan, "Bulan", class: 'block text-sm font-medium text-gray-700 mb-2' %>
              <%= select_tag :month, 
                             options_for_select(UserContribution::MONTHNAMES, @month_selected), 
                             class: 'w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500' %>
            </div>
            
            <!-- Tahun -->
            <div>
              <%= label_tag :tahun, "Tahun", class: 'block text-sm font-medium text-gray-700 mb-2' %>
              <%= select_tag :year, 
                             options_for_select((2020..2050).to_a, @year_selected), 
                             class: 'w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500' %>
            </div>
          </div>
          
          <!-- Submit Buttons -->
          <div class="flex flex-col sm:flex-row items-center justify-end space-y-3 sm:space-y-0 sm:space-x-4 pt-6 border-t border-gray-200">
            <%= link_to user_contributions_path, 
                        class: 'w-full sm:w-auto px-4 py-2 border border-gray-300 text-gray-700 font-medium rounded-md hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors duration-200 text-center' do %>
              <svg class="w-4 h-4 mr-2 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
              </svg>
              Batal
            <% end %>
            
            <%= submit_tag "Generate Tagihan", 
                           class: 'w-full sm:w-auto px-6 py-2 bg-green-600 text-white font-medium rounded-md hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition-colors duration-200',
                           data: { 
                             import_form_target: "submitButton",
                             action: "click->import-form#disableSubmit",
                             confirm: "Yakin ingin generate tagihan untuk periode ini? Proses ini akan memperbarui data di Google Sheets."
                           } %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<div class="max-w-full mx-auto">
  <div class="bg-white overflow-hidden shadow rounded-lg">
    <div class="p-6">
      <div class="sm:flex sm:items-center sm:justify-between mb-6">
        <div class="mb-4 sm:mb-0">
          <h1 class="text-xl sm:text-2xl font-bold text-gray-900">
            <%= current_user.is_warga? ? "Iuran Ku" : "Daftar Iuran Warga" %>
          </h1>
          <p class="mt-1 text-sm text-gray-500">
            <% if current_user.is_warga? %>
              Riwayat pembayaran iuran Anda tahun <span id='year-selected'><%= @year_selected %></span>
            <% else %>
              Kelola data iuran dan pembayaran warga tahun <span id='year-selected'><%= @year_selected %></span>
              <% if @block_selected.present? && @search_term.blank? %>
                • Blok <%= @block_selected %>
              <% elsif @search_term.present? %>
                • Pencarian: "<%= @search_term %>"
              <% end %>
            <% end %>
          </p>
        </div>
        <% if current_user.is_admin? %>
          <div class="w-full sm:w-auto flex flex-col sm:flex-row gap-2">
            <%= link_to new_user_contribution_path, class: "w-full sm:w-auto inline-flex items-center justify-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
              <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
              </svg>
              <span class="hidden sm:inline">Bayar Iuran</span>
              <span class="sm:hidden">Bayar</span>
            <% end %>
            <%= link_to import_data_user_contributions_path, class: "w-full sm:w-auto inline-flex items-center justify-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500" do %>
              <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M9 19l3 3m0 0l3-3m-3 3V10"/>
              </svg>
              <span class="hidden lg:inline">Import Data Iuran</span>
              <span class="lg:hidden">Import</span>
            <% end %>
            <%= link_to import_data_transfer_user_contributions_path, class: "w-full sm:w-auto inline-flex items-center justify-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" do %>
              <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7H5a2 2 0 00-2 2v9a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-3m-1 4l-3-3m0 0l-3 3m3-3v12"/>
              </svg>
              <span class="hidden lg:inline">Import Transfer</span>
              <span class="lg:hidden">Transfer</span>
            <% end %>
            <%= link_to generate_tagihan_user_contributions_path, class: "w-full sm:w-auto inline-flex items-center justify-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-purple-600 hover:bg-purple-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500" do %>
              <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
              </svg>
              <span class="hidden lg:inline">Generate Tagihan</span>
              <span class="lg:hidden">Generate</span>
            <% end %>
          </div>
        <% end %>
      </div>
      
      <% unless current_user.is_warga? %>
        <div class="mb-6">
          <%= form_tag(search_user_contributions_path, method: :post, class: 'flex flex-col lg:flex-row gap-3') do |f| %>
            <div class="flex flex-col sm:flex-row gap-3 flex-1">
              <div class="flex-1 min-w-0">
                <%= label_tag :tahun, "Tahun", class: 'block text-sm font-medium text-gray-700 mb-1' %>
                <%= select_tag :year_eq, options_for_select((AppSetting.starting_year..2035).to_a, @year_selected), class: 'w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm' %>
              </div>
              <div class="flex-1 min-w-0">
                <%= label_tag :blok, "Blok", class: 'block text-sm font-medium text-gray-700 mb-1' %>
                <%= select_tag :block_eq, options_for_select(Address::BLOK_NAME.keys.map { |k| [k, k] }, @block_selected), include_blank: "Semua Blok", class: 'w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm' %>
              </div>
              <div class="flex-1 min-w-0">
                <%= label_tag :search_address, "Cari Alamat", class: 'block text-sm font-medium text-gray-700 mb-1' %>
                <%= text_field_tag :search_address, @search_term, placeholder: 'Contoh: A12, B5...', class: 'w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm' %>
              </div>
            </div>
            <div class="flex items-end gap-2">
              <%= submit_tag "Cari", class: 'w-full sm:w-auto inline-flex items-center justify-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500' %>
              <%= link_to user_contributions_path, class: 'w-full sm:w-auto inline-flex items-center justify-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500' do %>
                Reset
              <% end %>
            </div>
          <% end %>
        </div>
      <% else %>
        <!-- Address filter for Warga users -->
        <% if current_user.addresses.count > 1 %>
          <div class="mb-6">
            <%= form_tag(search_user_contributions_path, method: :post, class: 'flex flex-row gap-3') do |f| %>
              <%= hidden_field_tag :year_eq, @year_selected %>
              <div class="flex-1 max-w-xs">
                <%= label_tag :address_filter, "Pilih Alamat", class: 'block text-sm font-medium text-gray-700 mb-1' %>
                <%= select_tag :address_filter,
                    options_for_select(
                      current_user.addresses.order(:block_address).map { |addr|
                        ["#{addr.block_address&.upcase} - #{addr.head_of_family&.name&.upcase}", addr.id]
                      },
                      @address_filter
                    ),
                    class: 'w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm' %>
              </div>
              <div class="flex items-end">
                <%= submit_tag "Ganti", class: 'inline-flex items-center justify-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500' %>
              </div>
            <% end %>
          </div>
        <% end %>
      <% end %>
      
      <div id="content-data">
        <% if current_user.is_warga? %>
          <%= render partial: 'warga_view' %>
        <% else %>
          <%= render partial: 'data' %>
        <% end %>
      </div>
    </div>
  </div>
</div>


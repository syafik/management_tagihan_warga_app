<div class="row">
  <div class="col-md-12 grid-margin stretch-card">
    <div class="card">
      <div class="card-body">
        <div class="d-sm-flex align-items-center mb-4">
          <h4 class="card-title mb-sm-0">Daftar Cash Flows</h4>
          <% if current_user.is_admin? %>
            <a href="<%= new_cash_flow_path %>" class="btn btn-primary ml-auto mb-3 mb-sm-0"> Buat Cash Flow Baru</a>
          <% end %>
        </div>
        <%= render partial: 'shared/search_form',
                   locals: {
                       url: search_cash_flows_path,
                       attributes: CashFlow.ransackable_attributes,
                       predicates: CashFlow.ransack_predicates
                   } %>
        <div id="content-data">
          <%= render partial: 'data' %>
        </div>
      </div>
    </div>
  </div>
</div>

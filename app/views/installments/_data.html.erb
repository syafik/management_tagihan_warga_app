<div class="table-responsive border rounded p-1">
  <table class="table table-hover" id="table-content">
    <thead>
    <tr>
      <th class="font-weight-bold">No</th>
      <th class="font-weight-bold">Description</th>
      <th class="font-weight-bold">Jumlah</th>
      <th class="font-weight-bold">Paid</th>
      <th class="font-weight-bold">Sisa</th>
      <th class="font-weight-bold">Status</th>
      <th class="font-weight-bold">Action</th>
    </tr>
    </thead>
    <tbody>
    <% @installments.each_with_index do |installment, i| %>
      <tr>
        <td><%= (i + 1) %> </td>
        <td><%= installment.description.upcase %></td>
        <td><%= number_to_currency(installment.value, unit: "Rp. ", separator: ",", delimiter: ".") %></td>
        <td><%= number_to_currency(installment.total_paid , unit: "Rp. ", separator: ",", delimiter: ".") %></td>
        <td><%= number_to_currency(installment.remaining_installment , unit: "Rp. ", separator: ",", delimiter: ".") %></td>
        <td><%= installment.paid_off ? "LUNAS" : "BELUM LUNAS" %></td>
        <td>
          <%= link_to 'Lihat', installment, class: 'btn-sm btn-success' %>
          <%= link_to 'Ubah', edit_installment_path(installment), class: 'btn-sm btn-info'  if current_user.is_admin? %>
          <%= link_to 'Destroy', installment, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn-sm btn-danger' if current_user.is_admin?%>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
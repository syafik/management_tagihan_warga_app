<div class="row">
  <div class="col-md-12 grid-margin stretch-card">
    <div class="card">
      <div class="card-body">
        <div class="d-sm-flex align-items-center mb-4">
          <h4 class="card-title mb-sm-0">Installment Detail</h4>
        </div>
          <div class="table-responsive rounded p-1">
            <table class="table">
              <thead></thead>
              <tbody>
              <tr>
                <td class="font-weight-bold">ID</td>
                <td><%= @installment.id %></td>
              </tr>
              <tr>
                <td class="font-weight-bold">Description</td>
                <td><%= @installment.description %></td>
              </tr>
              <tr>
                <td class="font-weight-bold">Value</td>
                <td><%= number_to_currency(@installment.value, unit: "Rp. ", separator: ",", delimiter: ".") %></td>
              </tr>
              <tr>
                <td class="font-weight-bold">Type</td>
                <td><%= @installment.parent_id.blank? ? "PINJAMAN BARU" : "BAYAR CICILAN #{@installment.description}" %></td>
              </tr>
              <tr>
                <td colspan="2">
                  <%= link_to 'Edit', edit_installment_path(@installment), class: 'btn btn-primary mr-2' if current_user.role == 2 %>
                  <%= link_to 'Back', installments_path, class: 'btn btn-light'  %>
                </td>
              </tr>
              </tbody>
            </table>
          </div>
      </div>
    </div>
  </div>
</div>


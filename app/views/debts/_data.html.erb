<div class="table-responsive border rounded p-1">
  <table class="table table-hover" id="table-content">
    <thead>
    <tr>
      <th class="font-weight-bold">No</th>
      <th class="font-weight-bold"><%= sort_link(@q, :user_name, 'User',{}, {remote: true, class: 'ajax-request'}) %></th>
      <th class="font-weight-bold"><%= sort_link(@q, :description, 'Keterangan',{}, {remote: true, class: 'ajax-request'}) %></th>
      <th class="font-weight-bold"><%= sort_link(@q, :value, 'Nilai',{}, {remote: true, class: 'ajax-request'}) %></th>
      <th class="font-weight-bold"><%= sort_link(@q, :debt_type, 'Type',{}, {remote: true, class: 'ajax-request'}) %></th>
      <th class="font-weight-bold"><%= sort_link(@q, :debt_date, 'Tanggal',{}, {remote: true, class: 'ajax-request'}) %></th>
      <th class="font-weight-bold">Action</th>
    </tr>
    </thead>
    <tbody>
    <% cur_page = @pagy.page %>
    <% @debts.each_with_index do |debt, i| %>
      <tr>
        <td><%= (i + 1) + ((@pagy.page - 1) * @pagy.items) %> </td>
        <td><%= debt.user.name.upcase %></td>
        <td><%= debt.description %></td>
        <td><%= number_to_currency(debt.value, unit: "Rp. ", separator: ",", delimiter: ".") %></td>
        <td><%= Debt::TYPE.invert[debt.debt_type] %></td>
        <td><%= debt.debt_date.strftime("%d %B %Y") %></td>
        <td>
          <%= link_to 'Lihat', debt, class: 'btn-sm btn-success' %>
          <%= link_to 'Ubah', edit_debt_path(debt), class: 'btn-sm btn-info'  if current_user.is_admin? %>
          <%= link_to 'Destroy', debt, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn-sm btn-danger'%>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
<div class="d-flex mt-4 flex-wrap">
  <p class="text-muted">Showing <%= pagy_info(@pagy) %></p>
  <%== pagy_nav(@pagy) %>
</div>
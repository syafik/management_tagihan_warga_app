<div class="bg-white py-8 px-4 shadow-2xl rounded-lg sm:px-10">
  <!-- Logo and Header -->
  <div class="text-center mb-8">
    <div class="mx-auto mb-4">
      <%= image_tag "logo-puri-ayana.png", 
          alt: "Puri Ayana Logo", 
          class: "h-20 w-auto mx-auto object-contain" %>
    </div>
    <h2 class="text-3xl font-bold text-gray-900">Puri Ayana</h2>
    <p class="mt-2 text-sm text-gray-600">Management System</p>
  </div>

  <!-- Welcome Message -->
  <div class="text-center mb-6">
    <h3 class="text-xl font-semibold text-gray-900">Pilih Metode Login</h3>
    <p class="mt-1 text-xs text-gray-500">Gunakan nomor WhatsApp atau password akun Anda.</p>
  </div>

  <!-- Login Method Toggle -->
  <div class="flex items-center justify-center gap-2 mb-6">
    <button type="button"
            class="login-method-btn px-4 py-2 text-sm font-semibold rounded-md bg-blue-600 text-white"
            data-login-method="whatsapp">
      WhatsApp
    </button>
    <button type="button"
            class="login-method-btn px-4 py-2 text-sm font-semibold rounded-md bg-gray-100 text-gray-700"
            data-login-method="password">
      Password
    </button>
  </div>

  <!-- Phone Number Form -->
  <%= form_with url: user_session_path, method: :post, local: true, html: { class: "space-y-6", data: { turbo: false }, id: "login-form-whatsapp" } do |f| %>
    <%= hidden_field_tag :login_method, 'whatsapp' %>
    <!-- Phone Number Field -->
    <div>
      <div class="relative">
        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
          <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
          </svg>
        </div>
        <%= text_field_tag :phone_number, 
            params[:phone_number], 
            placeholder: "08123456789 atau +628123456789", 
            id: "phone_number",
            autofocus: true,
            class: "block w-full pl-10 pr-3 py-3 border border-gray-300 rounded-md leading-5 bg-white placeholder-gray-500 focus:outline-none focus:placeholder-gray-400 focus:ring-1 focus:ring-blue-500 focus:border-blue-500 text-sm transition duration-150 ease-in-out" %>
      </div>
      <p class="mt-2 text-xs text-gray-500">Kami akan mengirimkan kode 6 digit ke WhatsApp Anda</p>
    </div>

    <!-- Send Code Button -->
    <div>
      <%= submit_tag "Kirim Kode Login", 
          data: { disable_with: "Mengirim..." },
          class: "group relative w-full flex justify-center py-3 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition duration-150 ease-in-out" %>
    </div>
  <% end %>

  <!-- Password Login Form -->
  <%= form_with url: user_session_path, method: :post, local: true, html: { class: "space-y-6 hidden", data: { turbo: false }, id: "login-form-password" } do |f| %>
    <%= hidden_field_tag :login_method, 'password' %>
    <div>
      <div class="relative">
        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
          <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
          </svg>
        </div>
        <%= text_field_tag :phone_number,
            params[:phone_number],
            placeholder: "08123456789 atau +628123456789",
            id: "phone_number_password",
            class: "block w-full pl-10 pr-3 py-3 border border-gray-300 rounded-md leading-5 bg-white placeholder-gray-500 focus:outline-none focus:placeholder-gray-400 focus:ring-1 focus:ring-blue-500 focus:border-blue-500 text-sm transition duration-150 ease-in-out" %>
      </div>
      <p class="mt-2 text-xs text-gray-500">Masukkan nomor WhatsApp yang terdaftar</p>
    </div>

    <div>
      <div class="relative">
        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
          <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 11c1.104 0 2-.896 2-2s-.896-2-2-2-2 .896-2 2 .896 2 2 2zm-6 7v-1a6 6 0 0112 0v1H6zm13-8a4 4 0 11-8 0 4 4 0 018 0z"/>
          </svg>
        </div>
        <%= password_field_tag :password,
            nil,
            placeholder: "Masukkan password",
            id: "password",
            class: "block w-full pl-10 pr-3 py-3 border border-gray-300 rounded-md leading-5 bg-white placeholder-gray-500 focus:outline-none focus:placeholder-gray-400 focus:ring-1 focus:ring-blue-500 focus:border-blue-500 text-sm transition duration-150 ease-in-out" %>
      </div>
    </div>

    <div>
      <%= submit_tag "Masuk", 
          data: { disable_with: "Masuk..." },
          class: "group relative w-full flex justify-center py-3 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition duration-150 ease-in-out" %>
    </div>

    <div class="text-center">
      <%= link_to "Lupa password?", new_user_password_path, class: "text-xs font-medium text-blue-600 hover:text-blue-700" %>
    </div>
  <% end %>

  <script>
    const methodButtons = document.querySelectorAll('.login-method-btn');
    const whatsappForm = document.getElementById('login-form-whatsapp');
    const passwordForm = document.getElementById('login-form-password');
    const initialMethod = "<%= params[:login_method].presence || 'whatsapp' %>";

    if (methodButtons.length && whatsappForm && passwordForm) {
      const applyMethod = (method) => {
        const isWhatsapp = method === 'whatsapp';

        whatsappForm.classList.toggle('hidden', !isWhatsapp);
        passwordForm.classList.toggle('hidden', isWhatsapp);

        methodButtons.forEach((btn) => {
          const active = btn.dataset.loginMethod === method;
          btn.classList.toggle('bg-blue-600', active);
          btn.classList.toggle('text-white', active);
          btn.classList.toggle('bg-gray-100', !active);
          btn.classList.toggle('text-gray-700', !active);
        });
      };

      applyMethod(initialMethod);

      methodButtons.forEach((button) => {
        button.addEventListener('click', () => {
          applyMethod(button.dataset.loginMethod);
        });
      });
    }
  </script>

  <!-- Footer -->
  <div class="mt-8 text-center">
    <p class="text-xs text-gray-500">
      Â© Padu Digital <%= Date.current.year %> PuriAyana Management System. All rights reserved.
    </p>
  </div>
</div>

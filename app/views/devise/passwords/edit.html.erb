<div class="bg-white py-8 px-4 shadow-2xl rounded-lg sm:px-10">
  <!-- Logo and Header -->
  <div class="text-center mb-8">
    <div class="mx-auto mb-4">
      <%= image_tag "logo-puri-ayana.png",
          alt: "Puri Ayana Logo",
          class: "h-20 w-auto mx-auto object-contain" %>
    </div>
    <h2 class="text-3xl font-bold text-gray-900">Puri Ayana</h2>
    <p class="mt-2 text-sm text-gray-600">Management System</p>
  </div>

  <div class="text-center mb-6">
    <h3 class="text-xl font-semibold text-gray-900">Buat Password Baru</h3>
    <p class="mt-1 text-xs text-gray-500">Masukkan password baru untuk akun Anda.</p>
  </div>

  <%= form_with model: resource, url: password_path(resource_name), method: :put, local: true, html: { class: "space-y-6", data: { turbo: false } } do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div>
      <%= f.label :password, "Password Baru", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <% if @minimum_password_length %>
        <p class="text-xs text-gray-500 mb-2">Minimal <%= @minimum_password_length %> karakter.</p>
      <% end %>
      <%= f.password_field :password,
          autofocus: true,
          autocomplete: "new-password",
          placeholder: "Masukkan password baru",
          class: "block w-full px-3 py-3 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-1 focus:ring-blue-500 focus:border-blue-500 text-sm" %>
    </div>

    <div>
      <%= f.label :password_confirmation, "Konfirmasi Password", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.password_field :password_confirmation,
          autocomplete: "new-password",
          placeholder: "Ulangi password baru",
          class: "block w-full px-3 py-3 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-1 focus:ring-blue-500 focus:border-blue-500 text-sm" %>
    </div>

    <div>
      <%= f.submit "Simpan Password Baru",
          class: "group relative w-full flex justify-center py-3 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition duration-150 ease-in-out" %>
    </div>
  <% end %>

  <div class="mt-6 text-center">
    <%= link_to "Kembali ke halaman login", new_user_session_path, class: "text-xs font-medium text-blue-600 hover:text-blue-700" %>
  </div>
</div>

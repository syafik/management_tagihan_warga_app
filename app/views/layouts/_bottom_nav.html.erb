<!-- Bottom Navigation for Mobile -->
<div class="lg:hidden fixed bottom-0 left-0 right-0 z-50 bg-white border-t border-gray-200 px-4 py-2" data-controller="bottom-sheet">
  <div class="flex justify-around items-center">
    <!-- Daftar Rumah -->
    <div class="flex flex-col items-center">
      <%= link_to addresses_path, class: "flex flex-col items-center p-2 text-xs #{request.path.start_with?('/addresses') ? 'text-indigo-600' : 'text-gray-600'} hover:text-indigo-600 transition-colors" do %>
        <svg class="w-5 h-5 mb-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
        </svg>
        <span class="text-xs">Rumah</span>
      <% end %>
    </div>

    <!-- Daftar Tunggakan -->
    <div class="flex flex-col items-center">
      <%= link_to arrears_index_path, class: "flex flex-col items-center p-2 text-xs #{request.path.start_with?('/arrears') ? 'text-indigo-600' : 'text-gray-600'} hover:text-indigo-600 transition-colors" do %>
        <svg class="w-5 h-5 mb-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
        </svg>
        <span class="text-xs">Tunggakan</span>
      <% end %>
    </div>

    <!-- Iuran / Data Iuran / Security Dashboard -->
    <div class="flex flex-col items-center">
      <% if current_user.is_security? %>
        <%= link_to security_dashboard_index_path, class: "flex flex-col items-center p-2 text-xs #{request.path.start_with?('/security_dashboard') && !request.path.include?('total_setoran') && !request.path.include?('expense') ? 'text-indigo-600' : 'text-gray-600'} hover:text-indigo-600 transition-colors" do %>
          <svg class="w-5 h-5 mb-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z"/>
          </svg>
          <span class="text-xs">Terima</span>
        <% end %>
      <% else %>
        <%= link_to user_contributions_path, class: "flex flex-col items-center p-2 text-xs #{request.path.start_with?('/user_contributions') ? 'text-indigo-600' : 'text-gray-600'} hover:text-indigo-600 transition-colors" do %>
          <svg class="w-5 h-5 mb-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"/>
          </svg>
          <span class="text-xs">
            <%= current_user.is_warga? ? 'Iuran Ku' : 'Data Iuran' %>
          </span>
        <% end %>
      <% end %>
    </div>

    <!-- Transaksi / Rekap / Pengeluaran -->
    <div class="flex flex-col items-center">
      <% if current_user.is_warga? %>
        <%= link_to show_report_cash_transactions_path('warga', Date.current.year, Date.current.month), class: "flex flex-col items-center p-2 text-xs #{request.path.include?('show_report') ? 'text-indigo-600' : 'text-gray-600'} hover:text-indigo-600 transition-colors" do %>
          <svg class="w-5 h-5 mb-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z"/>
          </svg>
          <span class="text-xs">Keuangan</span>
        <% end %>
      <% elsif current_user.is_security? %>
        <%= link_to rekap_pembayaran_security_dashboard_index_path, class: "flex flex-col items-center p-2 text-xs #{request.path.include?('rekap_pembayaran') ? 'text-indigo-600' : 'text-gray-600'} hover:text-indigo-600 transition-colors" do %>
          <svg class="w-5 h-5 mb-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"/>
          </svg>
          <span class="text-xs">Rekap</span>
        <% end %>
      <% else %>
        <%= link_to cash_transactions_path, class: "flex flex-col items-center p-2 text-xs #{request.path.start_with?('/cash_transactions') ? 'text-indigo-600' : 'text-gray-600'} hover:text-indigo-600 transition-colors" do %>
          <svg class="w-5 h-5 mb-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z"/>
          </svg>
          <span class="text-xs">Transaksi</span>
        <% end %>
      <% end %>
    </div>

    <!-- More Menu Button -->
    <div class="flex flex-col items-center">
      <button type="button"
              class="flex flex-col items-center p-2 text-xs text-gray-600 hover:text-indigo-600 transition-colors"
              data-action="click->bottom-sheet#toggle">
        <svg class="w-5 h-5 mb-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
        </svg>
        <span class="text-xs">Lainnya</span>
      </button>
    </div>
  </div>

  <!-- Bottom Sheet Menu -->
  <div class="fixed inset-0 bg-black bg-opacity-50 z-50 hidden"
       data-bottom-sheet-target="backdrop"
       data-action="click->bottom-sheet#close">
  </div>

  <div class="fixed bottom-0 left-0 right-0 bg-white rounded-t-2xl shadow-2xl z-50 transform translate-y-full transition-transform duration-300 ease-out"
       data-bottom-sheet-target="sheet">
    <!-- Handle bar -->
    <div class="flex justify-center pt-3 pb-2">
      <div class="w-12 h-1.5 bg-gray-300 rounded-full"></div>
    </div>

    <!-- Menu Header -->
    <div class="px-6 py-4 border-b border-gray-200">
      <h3 class="text-lg font-semibold text-gray-900">Menu Lainnya</h3>
    </div>

    <!-- Menu Items -->
    <div class="px-4 py-2 max-h-96 overflow-y-auto">
      <!-- Profile Section -->
      <div class="mb-4">
        <%= link_to user_path(current_user), class: "flex items-center px-4 py-3 rounded-lg hover:bg-gray-50 transition-colors", data: { turbo: false, action: "click->bottom-sheet#close" } do %>
          <div class="w-10 h-10 bg-indigo-100 rounded-full flex items-center justify-center mr-3">
            <svg class="w-6 h-6 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
            </svg>
          </div>
          <div class="flex-1">
            <p class="text-sm font-medium text-gray-900"><%= current_user.name || current_user.phone_number %></p>
            <p class="text-xs text-gray-500"><%= current_user.role_name %></p>
          </div>
          <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
          </svg>
        <% end %>
      </div>

      <div class="border-t border-gray-200 pt-2 mb-2"></div>

      <% if current_user.is_admin? %>
        <div class="mb-2">
          <p class="px-4 py-2 text-xs font-semibold text-gray-500 uppercase tracking-wider">Admin Tools</p>

          <%= link_to payment_reports_path, class: "flex items-center px-4 py-3 rounded-lg hover:bg-gray-50 transition-colors", data: { action: "click->bottom-sheet#close" } do %>
            <div class="w-10 h-10 bg-indigo-100 rounded-full flex items-center justify-center mr-3">
              <svg class="w-6 h-6 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 17v-2m3 2v-4m3 4v-6M4 6h16M4 10h16M4 14h16M4 18h16"/>
              </svg>
            </div>
            <div class="flex-1">
              <p class="text-sm font-medium text-gray-900">Laporan Pembayaran</p>
              <p class="text-xs text-gray-500">Ringkasan iuran & kas warga</p>
            </div>
            <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
          <% end %>
        </div>

        <div class="border-t border-gray-200 my-2"></div>
      <% end %>

      <% if current_user.is_security? && current_user.allow_manage_expense %>
        <!-- Pengeluaran for Security -->
        <%= link_to new_expense_security_dashboard_index_path, class: "flex items-center px-4 py-3 rounded-lg hover:bg-gray-50 transition-colors", data: { action: "click->bottom-sheet#close" } do %>
          <div class="w-10 h-10 bg-orange-100 rounded-full flex items-center justify-center mr-3">
            <svg class="w-6 h-6 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 14l6-6m-5.5.5h.01m4.99 5h.01M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16l3.5-2 3.5 2 3.5-2 3.5 2z"/>
            </svg>
          </div>
          <div class="flex-1">
            <p class="text-sm font-medium text-gray-900">Catat Pengeluaran</p>
            <p class="text-xs text-gray-500">Input pengeluaran operasional</p>
          </div>
          <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
          </svg>
        <% end %>

        <div class="border-t border-gray-200 my-2"></div>
      <% end %>

      <!-- Help & Support Section -->
      <div class="mb-2">
        <p class="px-4 py-2 text-xs font-semibold text-gray-500 uppercase tracking-wider">Bantuan & Informasi</p>

        <%= link_to support_contact_path, class: "flex items-center px-4 py-3 rounded-lg hover:bg-gray-50 transition-colors", data: { action: "click->bottom-sheet#close" } do %>
          <div class="w-10 h-10 bg-green-100 rounded-full flex items-center justify-center mr-3">
            <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192l-3.536 3.536M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5 0a4 4 0 11-8 0 4 4 0 018 0z"/>
            </svg>
          </div>
          <div class="flex-1">
            <p class="text-sm font-medium text-gray-900">Kontak Support</p>
            <p class="text-xs text-gray-500">WhatsApp, Email, FAQ</p>
          </div>
          <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
          </svg>
        <% end %>

        <%= link_to privacy_policy_path, class: "flex items-center px-4 py-3 rounded-lg hover:bg-gray-50 transition-colors", data: { action: "click->bottom-sheet#close" } do %>
          <div class="w-10 h-10 bg-blue-100 rounded-full flex items-center justify-center mr-3">
            <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
            </svg>
          </div>
          <div class="flex-1">
            <p class="text-sm font-medium text-gray-900">Kebijakan Privasi</p>
            <p class="text-xs text-gray-500">Perlindungan data pribadi</p>
          </div>
          <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
          </svg>
        <% end %>

        <%= link_to terms_of_service_path, class: "flex items-center px-4 py-3 rounded-lg hover:bg-gray-50 transition-colors", data: { action: "click->bottom-sheet#close" } do %>
          <div class="w-10 h-10 bg-purple-100 rounded-full flex items-center justify-center mr-3">
            <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
            </svg>
          </div>
          <div class="flex-1">
            <p class="text-sm font-medium text-gray-900">Ketentuan Layanan</p>
            <p class="text-xs text-gray-500">Syarat & ketentuan penggunaan</p>
          </div>
          <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
          </svg>
        <% end %>
      </div>

      <div class="border-t border-gray-200 my-2"></div>

      <!-- Logout -->
      <%= link_to destroy_user_session_path, method: :delete, class: "flex items-center px-4 py-3 rounded-lg hover:bg-red-50 transition-colors", data: { turbo_method: :delete, action: "click->bottom-sheet#close" } do %>
        <div class="w-10 h-10 bg-red-100 rounded-full flex items-center justify-center mr-3">
          <svg class="w-6 h-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"/>
          </svg>
        </div>
        <div class="flex-1">
          <p class="text-sm font-medium text-red-600">Keluar</p>
          <p class="text-xs text-red-400">Logout dari aplikasi</p>
        </div>
        <svg class="w-5 h-5 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
        </svg>
      <% end %>
    </div>

    <!-- Bottom padding for safe area -->
    <div class="h-6"></div>
  </div>
</div>

<!-- Add padding bottom to main content to avoid overlap with bottom nav -->
<style>
  @media (max-width: 1023px) {
    main {
      padding-bottom: 80px; /* Space for bottom nav */
    }
  }
</style>

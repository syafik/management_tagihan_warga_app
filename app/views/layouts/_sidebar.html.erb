<aside class="fixed inset-y-0 left-0 z-40 w-64 bg-white shadow-lg border-r border-gray-200 pt-16 lg:translate-x-0 -translate-x-full transition-transform duration-300 hidden lg:block" id="sidebar">
  <div class="h-full px-3 py-4 overflow-y-auto">
    <!-- Mobile close button -->
    <div class="flex justify-end lg:hidden mb-4">
      <button type="button" class="text-gray-400 hover:text-gray-500 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-indigo-500" data-action="click->mobile-menu#close">
        <span class="sr-only">Close sidebar</span>
        <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
        </svg>
      </button>
    </div>

    <!-- Profile section -->
    <div class="mb-6 pb-4 border-b border-gray-200">
      <a href="<%= user_path(current_user) %>" class="flex items-center p-3 text-gray-700 rounded-lg hover:bg-gray-100 group">
        <div class="flex-1">
          <p class="text-sm font-medium text-gray-900"><%= current_user.name || current_user.phone_number %></p>
          <p class="text-xs text-gray-500"><%= current_user.role_name %></p>
        </div>
      </a>
    </div>

    <% if current_user&.is_admin? %>
      <!-- Admin section -->
      <div class="mb-6 pb-4 border-b border-gray-200">
        <div class="mb-4">
          <h3 class="px-3 text-xs font-semibold text-red-600 uppercase tracking-wider">Admin Tools</h3>
        </div>

        <nav class="space-y-1">
          <%= link_to users_path, class: 'flex items-center px-3 py-2 text-sm font-medium text-gray-700 rounded-lg hover:bg-gray-100 group' do %>
            <svg class="flex-shrink-0 w-5 h-5 text-gray-500 group-hover:text-gray-700 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"/>
            </svg>
            Kelola User
          <% end %>

          <%= link_to new_user_path, class: 'flex items-center px-3 py-2 text-sm font-medium text-gray-700 rounded-lg hover:bg-gray-100 group' do %>
            <svg class="flex-shrink-0 w-5 h-5 text-gray-500 group-hover:text-gray-700 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"/>
            </svg>
            Tambah User Baru
          <% end %>

          <%= link_to new_address_path, class: 'flex items-center px-3 py-2 text-sm font-medium text-gray-700 rounded-lg hover:bg-gray-100 group' do %>
            <svg class="flex-shrink-0 w-5 h-5 text-gray-500 group-hover:text-gray-700 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
            </svg>
            Tambah Alamat Baru
          <% end %>

          <div class="my-2 border-t border-gray-200"></div>

          <%= link_to admin_root_path, target: '_blank', class: 'flex items-center px-3 py-2 text-sm font-medium text-red-700 rounded-lg hover:bg-red-50 group border border-red-200' do %>
            <svg class="flex-shrink-0 w-5 h-5 text-red-500 group-hover:text-red-700 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
            </svg>
            <div class="flex-1">
              <div class="text-sm font-medium">Administrate</div>
              <div class="text-xs text-red-500">Database Management</div>
            </div>
            <svg class="w-4 h-4 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-1M14 8h6m-6 0v6h6V8z"/>
            </svg>
          <% end %>

          <%= link_to '/solid-queue', target: '_blank', class: 'flex items-center px-3 py-2 text-sm font-medium text-green-700 rounded-lg hover:bg-green-50 group border border-green-200' do %>
            <svg class="flex-shrink-0 w-5 h-5 text-green-500 group-hover:text-green-700 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
            </svg>
            <div class="flex-1">
              <div class="text-sm font-medium">Queue Dashboard</div>
              <div class="text-xs text-green-500">Monitor Background Jobs</div>
            </div>
            <svg class="w-4 h-4 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-1M14 8h6m-6 0v6h6V8z"/>
            </svg>
          <% end %>

        </nav>
      </div>
    <% end %>
    
    <!-- Navigation section -->
    <div class="mb-4">
      <h3 class="px-3 text-xs font-semibold text-gray-500 uppercase tracking-wider">Aplikasi</h3>
    </div>
    
    <nav class="space-y-1">
      <%= link_to root_path, class: 'flex items-center px-3 py-2 text-sm font-medium text-gray-700 rounded-lg hover:bg-gray-100 group' do %>
        <svg class="flex-shrink-0 w-5 h-5 text-gray-500 group-hover:text-gray-700 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
        </svg>
        Dashboard
      <% end %>

      <%= link_to addresses_path, class: 'flex items-center px-3 py-2 text-sm font-medium text-gray-700 rounded-lg hover:bg-gray-100 group' do %>
        <svg class="flex-shrink-0 w-5 h-5 text-gray-500 group-hover:text-gray-700 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2H5a2 2 0 00-2-2z"/>
        </svg>
        Daftar Rumah
      <% end %>

      <% if current_user.role == 1 %>
        <!-- Iuran Ku for Warga -->
        <%= link_to user_contributions_path, class: 'flex items-center px-3 py-2 text-sm font-medium text-gray-700 rounded-lg hover:bg-gray-100 group' do %>
          <svg class="flex-shrink-0 w-5 h-5 text-gray-500 group-hover:text-gray-700 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"/>
          </svg>
          Iuran Ku
        <% end %>
      <% elsif current_user.is_security? %>
        <!-- Security Dashboard -->
        <%= link_to security_dashboard_index_path, class: 'flex items-center px-3 py-2 text-sm font-medium text-gray-700 rounded-lg hover:bg-gray-100 group' do %>
          <svg class="flex-shrink-0 w-5 h-5 text-gray-500 group-hover:text-gray-700 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z"/>
          </svg>
          Terima Pembayaran
        <% end %>

        <!-- Rekap Pembayaran for Security -->
        <%= link_to rekap_pembayaran_security_dashboard_index_path, class: 'flex items-center px-3 py-2 text-sm font-medium text-gray-700 rounded-lg hover:bg-gray-100 group' do %>
          <svg class="flex-shrink-0 w-5 h-5 text-gray-500 group-hover:text-gray-700 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"/>
          </svg>
          Rekap Pembayaran
        <% end %>

        <!-- Catat Pengeluaran for Security (only if allowed) -->
        <% if current_user.allow_manage_expense %>
          <%= link_to new_expense_security_dashboard_index_path, class: 'flex items-center px-3 py-2 text-sm font-medium text-gray-700 rounded-lg hover:bg-gray-100 group' do %>
            <svg class="flex-shrink-0 w-5 h-5 text-gray-500 group-hover:text-gray-700 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 14l6-6m-5.5.5h.01m4.99 5h.01M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16l3.5-2 3.5 2 3.5-2 3.5 2z"/>
            </svg>
            Catat Pengeluaran
          <% end %>
        <% end %>
      <% else %>
        <!-- Data Iuran Warga for Admin -->
        <%= link_to user_contributions_path, class: 'flex items-center px-3 py-2 text-sm font-medium text-gray-700 rounded-lg hover:bg-gray-100 group' do %>
          <svg class="flex-shrink-0 w-5 h-5 text-gray-500 group-hover:text-gray-700 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z"/>
          </svg>
          Data Iuran Warga
        <% end %>
      <% end %>
      
      <% if current_user.is_warga? %>
        <%= link_to show_report_cash_transactions_path('warga', Date.current.year, Date.current.month), class: 'flex items-center px-3 py-2 text-sm font-medium text-gray-700 rounded-lg hover:bg-gray-100 group' do %>
          <svg class="flex-shrink-0 w-5 h-5 text-gray-500 group-hover:text-gray-700 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z"/>
          </svg>
          Laporan Keuangan
        <% end %>
      <% elsif !current_user.is_security? %>
        <%= link_to cash_transactions_path, class: 'flex items-center px-3 py-2 text-sm font-medium text-gray-700 rounded-lg hover:bg-gray-100 group' do %>
          <svg class="flex-shrink-0 w-5 h-5 text-gray-500 group-hover:text-gray-700 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z"/>
          </svg>
          Daftar Transaksi
        <% end %>
      <% end %>

    </nav>
  </div>
</aside>
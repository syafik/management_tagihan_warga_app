<div class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100 py-8">
  <div class="max-w-4xl mx-auto px-4">
    <!-- Header -->
    <div class="mb-8">
      <div class="flex items-center justify-between mb-4">
        <%= link_to root_path, class: "flex items-center text-gray-600 hover:text-gray-900" do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
          </svg>
          Kembali
        <% end %>
      </div>

      <h1 class="text-3xl font-bold text-gray-900 mb-2">Bayar Iuran</h1>
      <p class="text-gray-600">Pilih bulan yang ingin dibayar dengan QRIS</p>
    </div>

    <!-- Address Info -->
    <div class="bg-white rounded-xl shadow-sm p-6 mb-6">
      <div class="flex items-start">
        <div class="flex-shrink-0">
          <div class="w-12 h-12 bg-indigo-100 rounded-lg flex items-center justify-center">
            <svg class="w-6 h-6 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
            </svg>
          </div>
        </div>
        <div class="ml-4">
          <h3 class="text-lg font-semibold text-gray-900">Blok <%= @address.block_address&.upcase %></h3>
          <p class="text-sm text-gray-600"><%= current_user.name %></p>
        </div>
      </div>
    </div>

    <%= form_with url: payments_path, method: :post, data: { controller: 'payment-wizard' } do |f| %>
      <%= hidden_field_tag :address_id, @address.id %>

      <% has_unpaid = @unpaid_months[:arrears].any? || @unpaid_months[:current_year_past].any? || @unpaid_months[:current_year_future].any? || @unpaid_months[:next_year].any? %>

      <% if has_unpaid %>
        <!-- Old Arrears Section -->
        <% if @unpaid_months[:arrears].any? %>
          <div class="bg-white rounded-xl shadow-sm p-6 mb-6 border-2 border-red-200">
            <div class="flex items-center mb-4">
              <svg class="w-6 h-6 text-red-600 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
              </svg>
              <h3 class="text-lg font-semibold text-red-900">Tunggakan Lama (Sebelum <%= Date.current.year %>)</h3>
            </div>

            <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-3">
              <% @unpaid_months[:arrears].each do |arrears_data| %>
                <%
                  # For old arrears, format: "arrears-1", "arrears-2", etc.
                  arrears_key = "arrears-#{arrears_data[:arrears_index]}"
                %>
                <label class="month-card cursor-pointer border-2 border-red-300 rounded-lg p-4 transition-all hover:shadow-md bg-red-50">
                  <%= check_box_tag 'selected_months[]', arrears_key, false,
                      class: 'hidden',
                      data: {
                        payment_wizard_target: 'arrearsCheckbox',
                        amount: arrears_data[:amount].to_i,
                        action: 'change->payment-wizard#updateTotal change->payment-wizard#toggleCard'
                      }
                  %>

                  <div class="flex items-center justify-between mb-2">
                    <span class="text-sm font-medium text-gray-700"><%= arrears_data[:month_name] %></span>
                    <div class="checkmark-circle w-5 h-5 rounded-full border-2 border-red-400 flex items-center justify-center">
                      <svg class="checkmark-icon w-3 h-3 text-white opacity-0 transition-opacity" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                      </svg>
                    </div>
                  </div>

                  <div class="text-xs font-semibold text-red-600">
                    Rp <%= number_with_delimiter(arrears_data[:amount].to_i, delimiter: '.') %>
                  </div>
                </label>
              <% end %>
            </div>
          </div>
        <% end %>

        <!-- Current Year Section (Combined Past Due and Future) -->
        <% if @unpaid_months[:current_year_past].any? || @unpaid_months[:current_year_future].any? %>
          <div class="bg-white rounded-xl shadow-sm p-6 mb-6 border-2 border-blue-200">
            <div class="flex items-center mb-4">
              <svg class="w-6 h-6 text-blue-600 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"/>
              </svg>
              <h3 class="text-lg font-semibold text-blue-900">Tahun <%= Date.current.year %></h3>
            </div>

            <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-3">
              <% (@unpaid_months[:current_year_past] + @unpaid_months[:current_year_future]).sort_by { |m| m[:month] }.each do |month_data| %>
                <% month_key = "#{month_data[:year]}-#{month_data[:month]}" %>
                <% is_past = @unpaid_months[:current_year_past].include?(month_data) %>
                <label class="month-card cursor-pointer border-2 <%= is_past ? 'border-orange-200 bg-orange-50' : 'border-blue-200 bg-blue-50' %> rounded-lg p-4 transition-all hover:shadow-md">
                  <%= check_box_tag 'selected_months[]', month_key, false,
                      class: 'hidden',
                      data: {
                        payment_wizard_target: is_past ? 'unpaidCheckbox' : 'futureCheckbox',
                        amount: month_data[:amount].to_i,
                        action: 'change->payment-wizard#updateTotal change->payment-wizard#toggleCard'
                      }
                  %>

                  <div class="flex items-center justify-between mb-2">
                    <span class="text-sm font-medium text-gray-700"><%= month_data[:month_name] %></span>
                    <div class="checkmark-circle w-5 h-5 rounded-full border-2 <%= is_past ? 'border-orange-400' : 'border-blue-400' %> flex items-center justify-center">
                      <svg class="checkmark-icon w-3 h-3 text-white opacity-0 transition-opacity" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                      </svg>
                    </div>
                  </div>

                  <div class="text-xs font-semibold <%= is_past ? 'text-orange-600' : 'text-blue-600' %>">
                    Rp <%= number_with_delimiter(month_data[:amount].to_i, delimiter: '.') %>
                  </div>
                </label>
              <% end %>
            </div>
          </div>
        <% end %>

        <!-- Next Year Section (only shown if current month >= October) -->
        <% if @unpaid_months[:next_year].any? %>
          <div class="bg-white rounded-xl shadow-sm mb-6 border-2 border-indigo-200">
            <button type="button"
                    onclick="this.nextElementSibling.classList.toggle('hidden'); this.querySelector('.expand-icon').classList.toggle('rotate-180');"
                    class="w-full p-6 flex items-center justify-between hover:bg-indigo-50 transition-colors rounded-t-xl">
              <div class="flex items-center">
                <svg class="w-6 h-6 text-indigo-600 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"/>
                </svg>
                <div class="text-left">
                  <h3 class="text-lg font-semibold text-indigo-900">Tahun <%= Date.current.year + 1 %> - Bayar di Muka</h3>
                  <p class="text-sm text-indigo-700">Pembayaran untuk tahun depan. Tersedia mulai Oktober.</p>
                </div>
              </div>
              <svg class="expand-icon w-6 h-6 text-indigo-600 transform transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
              </svg>
            </button>

            <div class="hidden p-6 pt-0">
              <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-3">
                <% @unpaid_months[:next_year].sort_by { |m| m[:month] }.each do |month_data| %>
                  <% month_key = "#{month_data[:year]}-#{month_data[:month]}" %>
                  <label class="month-card cursor-pointer border-2 border-indigo-200 rounded-lg p-4 transition-all hover:shadow-md bg-indigo-50">
                    <%= check_box_tag 'selected_months[]', month_key, false,
                        class: 'hidden',
                        data: {
                          payment_wizard_target: 'nextYearCheckbox',
                          amount: month_data[:amount].to_i,
                          action: 'change->payment-wizard#updateTotal change->payment-wizard#toggleCard'
                        }
                    %>

                    <div class="flex items-center justify-between mb-2">
                      <span class="text-sm font-medium text-gray-700"><%= month_data[:month_name] %></span>
                      <div class="checkmark-circle w-5 h-5 rounded-full border-2 border-indigo-400 flex items-center justify-center">
                        <svg class="checkmark-icon w-3 h-3 text-white opacity-0 transition-opacity" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                        </svg>
                      </div>
                    </div>

                    <div class="text-xs font-semibold text-indigo-600">
                      Rp <%= number_with_delimiter(month_data[:amount].to_i, delimiter: '.') %>
                    </div>
                  </label>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      <% else %>
        <div class="bg-white rounded-xl shadow-sm p-8 text-center">
          <div class="inline-flex items-center justify-center w-16 h-16 bg-green-100 rounded-full mb-4">
            <svg class="w-10 h-10 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Tidak Ada Tunggakan</h3>
          <p class="text-gray-600">Semua iuran sudah lunas. Terima kasih!</p>
        </div>
      <% end %>

      <% if @unpaid_months.any? %>
        <div class="sticky bottom-0 bg-white rounded-xl shadow-lg p-6 mt-6">
          <div class="flex items-center justify-between mb-4">
            <div>
              <p class="text-sm text-gray-600">Total Pembayaran</p>
              <p class="text-2xl font-bold text-gray-900" data-payment-wizard-target="totalAmountBottom">Rp 0</p>
              <p class="text-xs text-gray-500" data-payment-wizard-target="itemCountBottom">0 item</p>
            </div>

            <%= button_tag type: 'submit',
                class: 'bg-indigo-600 text-white px-8 py-3 rounded-lg font-semibold hover:bg-indigo-700 disabled:opacity-50 disabled:cursor-not-allowed transition-all',
                data: { payment_wizard_target: 'submitButton' },
                disabled: true do %>
              <div class="flex items-center">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v1m6 11h2m-6 0h-2v4m0-11v3m0 0h.01M12 12h4.01M16 20h4M4 12h4m12 0h.01M5 8h2a1 1 0 001-1V5a1 1 0 00-1-1H5a1 1 0 00-1 1v2a1 1 0 001 1zm12 0h2a1 1 0 001-1V5a1 1 0 00-1-1h-2a1 1 0 00-1 1v2a1 1 0 001 1zM5 20h2a1 1 0 001-1v-2a1 1 0 00-1-1H5a1 1 0 00-1 1v2a1 1 0 001 1z"/>
                </svg>
                Bayar dengan QRIS
              </div>
            <% end %>
          </div>

          <div class="flex flex-wrap gap-2 pt-4 border-t">
            <% if @unpaid_months[:current_year_past].any? %>
              <button type="button"
                      data-action="click->payment-wizard#selectAllUnpaid"
                      class="px-3 py-1.5 text-xs font-medium text-orange-700 bg-orange-50 border border-orange-200 rounded-lg hover:bg-orange-100 hover:border-orange-300 transition-colors">
                <div class="flex items-center gap-1.5">
                  <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"/>
                  </svg>
                  Pilih Semua Bulan Belum Bayar
                </div>
              </button>
            <% end %>

            <% if @unpaid_months[:current_year_future].any? %>
              <button type="button"
                      data-action="click->payment-wizard#selectAllFuture"
                      class="px-3 py-1.5 text-xs font-medium text-blue-700 bg-blue-50 border border-blue-200 rounded-lg hover:bg-blue-100 hover:border-blue-300 transition-colors">
                <div class="flex items-center gap-1.5">
                  <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                  </svg>
                  Pilih Semua Bayar di Muka
                </div>
              </button>
            <% end %>

            <% if @unpaid_months[:next_year].any? %>
              <button type="button"
                      data-action="click->payment-wizard#selectAllNextYear"
                      class="px-3 py-1.5 text-xs font-medium text-indigo-700 bg-indigo-50 border border-indigo-200 rounded-lg hover:bg-indigo-100 hover:border-indigo-300 transition-colors">
                <div class="flex items-center gap-1.5">
                  <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"/>
                  </svg>
                  Pilih Semua Tahun <%= Date.current.year + 1 %>
                </div>
              </button>
            <% end %>

            <% if @unpaid_months[:arrears].any? %>
              <button type="button"
                      data-action="click->payment-wizard#selectAllArrears"
                      class="px-3 py-1.5 text-xs font-medium text-red-700 bg-red-50 border border-red-200 rounded-lg hover:bg-red-100 hover:border-red-300 transition-colors">
                <div class="flex items-center gap-1.5">
                  <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
                  </svg>
                  Pilih Semua Tunggakan
                </div>
              </button>
            <% end %>

            <button type="button"
                    data-action="click->payment-wizard#resetSelection"
                    class="px-3 py-1.5 text-xs font-medium text-gray-700 bg-gray-50 border border-gray-200 rounded-lg hover:bg-gray-100 hover:border-gray-300 transition-colors">
              <div class="flex items-center gap-1.5">
                <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
                </svg>
                Reset
              </div>
            </button>
          </div>
        </div>
      <% end %>
    <% end %>

    <div class="mt-6 bg-blue-50 border border-blue-200 rounded-lg p-4">
      <div class="flex">
        <svg class="w-5 h-5 text-blue-600 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
        </svg>
        <div class="ml-3">
          <h4 class="text-sm font-medium text-blue-900">Informasi Pembayaran QRIS</h4>
          <div class="mt-2 text-sm text-blue-700">
            <ul class="list-disc list-inside space-y-1">
              <li>Scan QR code dengan aplikasi e-wallet favorit Anda</li>
              <li>Biaya admin: 0.7% + Rp 750 per transaksi (ditanggung pembayar)</li>
              <li>QR code berlaku selama 2 jam</li>
              <li>Status pembayaran akan terupdate otomatis</li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

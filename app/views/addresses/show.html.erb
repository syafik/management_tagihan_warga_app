<div class="max-w-4xl mx-auto">
  <div class="bg-white overflow-hidden shadow rounded-lg">
    <div class="px-4 py-5 sm:px-6 border-b border-gray-200">
      <div class="sm:flex sm:items-center sm:justify-between">
        <div class="mb-4 sm:mb-0">
          <h3 class="text-lg leading-6 font-medium text-gray-900">Detail Alamat</h3>
          <p class="mt-1 max-w-2xl text-sm text-gray-500">Informasi lengkap alamat dan penghuni</p>
        </div>
        <div class="flex flex-col sm:flex-row space-y-2 sm:space-y-0 sm:space-x-3">
          <% if current_user.is_admin? %>
            <%= link_to 'Ubah', edit_address_path(@address), class: 'w-full sm:w-auto inline-flex items-center justify-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700' %>
          <% end %>
          <%= link_to 'Kembali', addresses_path, class: 'w-full sm:w-auto inline-flex items-center justify-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50' %>
        </div>
      </div>
    </div>
    
    <div class="px-4 py-5 sm:p-6">
      <dl class="grid grid-cols-1 gap-x-4 gap-y-6 lg:grid-cols-2">
        <div>
          <dt class="text-sm font-medium text-gray-500">ID</dt>
          <dd class="mt-1 text-sm text-gray-900"><%= @address.id %></dd>
        </div>
        
        <div>
          <dt class="text-sm font-medium text-gray-500">Blok</dt>
          <dd class="mt-1 text-sm text-gray-900 font-semibold"><%= @address.block_address.upcase %></dd>
        </div>
        
        <div>
          <dt class="text-sm font-medium text-gray-500">Kepala Keluarga</dt>
          <dd class="mt-1 text-sm text-gray-900">
            <% if @address.head_of_family.present? %>
              <div class="flex items-center">
                <div class="flex-shrink-0 h-10 w-10">
                  <div class="h-10 w-10 rounded-full bg-indigo-100 flex items-center justify-center">
                    <span class="text-indigo-600 font-medium text-sm"><%= @address.head_of_family.name.first.upcase %></span>
                  </div>
                </div>
                <div class="ml-3">
                  <div class="text-sm font-medium text-gray-900"><%= @address.head_of_family.name %></div>
                  <% if @address.head_of_family.phone_number.present? %>
                    <div class="text-sm text-gray-500"><%= @address.head_of_family.phone_number %></div>
                  <% end %>
                </div>
              </div>
            <% else %>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-500">
                Tidak ada kepala keluarga
              </span>
            <% end %>
          </dd>
        </div>
        
        <div>
          <dt class="text-sm font-medium text-gray-500">Jumlah Penghuni</dt>
          <dd class="mt-1 text-sm text-gray-900">
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
              <%= @address.users.count %> orang
            </span>
          </dd>
        </div>
        
        <% unless current_user.is_warga? %>
          <div>
            <dt class="text-sm font-medium text-gray-500">Iuran Bulanan</dt>
            <dd class="mt-1 text-sm text-gray-900">
              <span class="text-lg font-semibold text-green-600">
                <%= number_to_currency(@address.current_contribution_rate, unit: "Rp. ", separator: ",", delimiter: ".") %>
              </span>
            </dd>
          </div>
          
          <div>
            <dt class="text-sm font-medium text-gray-500">Status</dt>
            <dd class="mt-1">
              <% if @address.special_rate? %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">Special Rate</span>
                <% if @address.current_contribution_rate == 0 %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800 ml-1">Free</span>
                <% end %>
              <% elsif @address.free? %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">Free</span>
              <% else %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">Normal</span>
              <% end %>
            </dd>
          </div>
          
          <div>
            <dt class="text-sm font-medium text-gray-500">Tunggakan</dt>
            <dd class="mt-1 text-sm text-gray-900">
              <% if @address.arrears > 0 %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                  <%= @address.arrears %> bulan
                </span>
              <% else %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                  Tidak ada tunggakan
                </span>
              <% end %>
            </dd>
          </div>
        <% end %>
        
        <div>
          <dt class="text-sm font-medium text-gray-500">Terakhir Diupdate</dt>
          <dd class="mt-1 text-sm text-gray-900"><%= @address.updated_at.strftime("%d %B %Y, %H:%M") %></dd>
        </div>
      </dl>
    </div>
  </div>
</div>


<div class="max-w-6xl mx-auto p-4 sm:p-6 lg:p-8">
  <!-- Header Section -->
  <div class="mb-6">
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between">
      <div>
        <h1 class="text-2xl font-bold text-gray-900">Edit Alamat</h1>
        <p class="mt-1 text-sm text-gray-500">Kelola informasi alamat dan tunggakan iuran</p>
      </div>
      <%= link_to addresses_path, class: 'mt-4 sm:mt-0 inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500' do %>
        <svg class="-ml-1 mr-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
        </svg>
        Kembali ke Daftar
      <% end %>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <!-- Address Information Card -->
    <div class="bg-white overflow-hidden shadow rounded-lg">
      <div class="px-4 py-5 sm:p-6">
        <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">Informasi Alamat</h3>
        <%= render 'form', address: @address %>
      </div>
    </div>

    <!-- Arrears Payment Card -->
    <div class="bg-white overflow-hidden shadow rounded-lg">
      <div class="px-4 py-5 sm:p-6">
        <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">Pembayaran Tunggakan</h3>
        
        <!-- Arrears Info -->
        <div class="mb-6 p-4 bg-yellow-50 border border-yellow-200 rounded-md">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-yellow-400" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
              </svg>
            </div>
            <div class="ml-3">
              <h3 class="text-sm font-medium text-yellow-800">Tunggakan Saat Ini</h3>
              <div class="mt-2 text-sm text-yellow-700">
                <p><strong><%= @address.arrears %> bulan</strong> tunggakan belum dibayar</p>
                <p class="text-xs mt-1">Tunggakan adalah iuran tahun 2024 ke bawah yang belum dibayar</p>
              </div>
            </div>
          </div>
        </div>

        <!-- Payment Form -->
        <% if @address.arrears > 0 %>
          <%= form_with url: pay_arrears_address_path(@address), method: :post, local: true, class: 'space-y-4', data: { controller: 'arrears-payment' } do |form| %>
            <div>
              <%= form.label :months_paid, "Jumlah Bulan yang Dibayar", class: 'block text-sm font-medium text-gray-700 mb-2' %>
              <%= form.number_field :months_paid, 
                  min: 1, 
                  max: @address.arrears, 
                  value: 1,
                  class: 'block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm',
                  placeholder: 'Masukkan jumlah bulan',
                  data: { arrears_payment_target: 'monthsField', action: 'input->arrears-payment#updateTotal' } %>
              <p class="mt-1 text-xs text-gray-500">Maksimal: <%= @address.arrears %> bulan</p>
            </div>

            <div>
              <%= form.label :rate_per_month, "Tarif per Bulan (Tahun 2024)", class: 'block text-sm font-medium text-gray-700 mb-2' %>
              <% rate_2024 = @address.expected_contribution_for(12, 2024) %>
              <%= form.number_field :rate_per_month, 
                  value: rate_2024,
                  step: 1000,
                  class: 'block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm',
                  placeholder: 'Tarif per bulan',
                  data: { arrears_payment_target: 'rateField', action: 'input->arrears-payment#updateTotal' } %>
              <p class="mt-1 text-xs text-gray-500">Tarif yang berlaku di tahun 2024: <%= number_to_currency(rate_2024, unit: "Rp ", separator: ",", delimiter: ".") %></p>
            </div>

            <div>
              <%= form.label :total_amount, "Total Pembayaran", class: 'block text-sm font-medium text-gray-700 mb-2' %>
              <div class="relative">
                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                  <span class="text-gray-500 sm:text-sm">Rp</span>
                </div>
                <%= form.number_field :total_amount, 
                    readonly: true,
                    value: rate_2024,
                    class: 'block w-full pl-10 rounded-md border-gray-300 bg-gray-50 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm',
                    data: { arrears_payment_target: 'totalField' } %>
              </div>
            </div>

            <div>
              <%= form.label :payment_date, "Tanggal Pembayaran", class: 'block text-sm font-medium text-gray-700 mb-2' %>
              <%= form.date_field :payment_date, 
                  value: Date.current,
                  class: 'block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm' %>
            </div>

            <div class="pt-4">
              <%= form.submit "Bayar Tunggakan", 
                  class: 'w-full inline-flex justify-center items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500',
                  confirm: 'Apakah Anda yakin ingin memproses pembayaran tunggakan ini?' %>
            </div>
          <% end %>
        <% else %>
          <div class="text-center py-8">
            <svg class="mx-auto h-12 w-12 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <h3 class="mt-2 text-sm font-medium text-gray-900">Tidak Ada Tunggakan</h3>
            <p class="mt-1 text-sm text-gray-500">Alamat ini tidak memiliki tunggakan yang perlu dibayar.</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>




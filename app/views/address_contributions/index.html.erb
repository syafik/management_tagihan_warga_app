<div class="row">
  <div class="col-md-12 grid-margin stretch-card">
    <div class="card">
      <div class="card-body">
        <div class="d-sm-flex align-items-center mb-4">
          <h4 class="card-title mb-sm-0">Special Rates for <%= @address.block_address.upcase %></h4>
          <%= link_to 'Add Special Rate', new_address_address_contribution_path(@address), class: 'btn btn-primary ml-auto mb-3 mb-sm-0' %>
        </div>
        
        <div class="row mb-3">
          <div class="col-md-6">
            <div class="card bg-light">
              <div class="card-body">
                <h6 class="card-title">Current Rate</h6>
                <h4 class="text-primary">
                  <%= number_to_currency(@address.current_contribution_rate, unit: "Rp. ", separator: ",", delimiter: ".") %>
                </h4>
                <% if @address.special_rate? %>
                  <span class="badge badge-warning">Special Rate Active</span>
                <% else %>
                  <span class="badge badge-success">Default Rate</span>
                <% end %>
              </div>
            </div>
          </div>
        </div>

        <% if @address_contributions.any? %>
          <div class="table-responsive">
            <table class="table table-hover">
              <thead>
                <tr>
                  <th>Amount</th>
                  <th>Effective From</th>
                  <th>Effective Until</th>
                  <th>Reason</th>
                  <th>Status</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% @address_contributions.each do |contribution| %>
                  <tr class="<%= 'table-success' if contribution.active_on_date? %>">
                    <td>
                      <%= number_to_currency(contribution.amount, unit: "Rp. ", separator: ",", delimiter: ".") %>
                    </td>
                    <td><%= contribution.effective_from.strftime('%d %b %Y') %></td>
                    <td>
                      <%= contribution.effective_until&.strftime('%d %b %Y') || 'Indefinite' %>
                    </td>
                    <td><%= contribution.reason %></td>
                    <td>
                      <% if contribution.active_on_date? %>
                        <span class="badge badge-success">Active</span>
                      <% elsif contribution.effective_from > Date.current %>
                        <span class="badge badge-info">Future</span>
                      <% else %>
                        <span class="badge badge-secondary">Expired</span>
                      <% end %>
                    </td>
                    <td>
                      <%= link_to 'Edit', edit_address_address_contribution_path(@address, contribution), class: 'btn btn-sm btn-info' %>
                      <%= link_to 'Delete', address_address_contribution_path(@address, contribution), method: :delete, 
                                  confirm: 'Are you sure?', class: 'btn btn-sm btn-danger' %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        <% else %>
          <div class="text-center py-4">
            <p class="text-muted">No special rates configured for this address.</p>
            <%= link_to 'Add First Special Rate', new_address_address_contribution_path(@address), class: 'btn btn-primary' %>
          </div>
        <% end %>

        <div class="mt-3">
          <%= link_to 'Back to Address', @address, class: 'btn btn-secondary' %>
          <%= link_to 'All Addresses', addresses_path, class: 'btn btn-light' %>
        </div>
      </div>
    </div>
  </div>
</div>
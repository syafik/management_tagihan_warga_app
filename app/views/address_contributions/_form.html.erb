<%= form_for([@address, address_contribution]) do |f| %>
  <% if address_contribution.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(address_contribution.errors.count, "error") %> prohibited this record from being saved:</h4>
      <ul>
        <% address_contribution.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :amount, 'Amount (Rp)' %>
    <%= f.number_field :amount, step: 0.01, class: 'form-control', placeholder: 'Enter amount' %>
    <small class="form-text text-muted">Enter 0 for free, or any amount for custom rate</small>
  </div>

  <div class="form-group">
    <%= f.label :effective_from, 'Effective From' %>
    <%= f.date_field :effective_from, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :effective_until, 'Effective Until (Optional)' %>
    <%= f.date_field :effective_until, class: 'form-control' %>
    <small class="form-text text-muted">Leave empty for indefinite period</small>
  </div>

  <div class="form-group">
    <%= f.label :reason, 'Reason' %>
    <%= f.text_area :reason, class: 'form-control', rows: 3, placeholder: 'Reason for special rate' %>
  </div>

  <div class="form-group">
    <div class="form-check">
      <%= f.check_box :active, class: 'form-check-input' %>
      <%= f.label :active, 'Active', class: 'form-check-label' %>
    </div>
  </div>

  <%= f.submit 'Save', class: 'btn btn-primary mr-2' %>
  <%= link_to 'Cancel', address_address_contributions_path(@address), class: 'btn btn-light' %>
<% end %>
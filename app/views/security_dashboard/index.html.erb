<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4 sm:py-6" data-controller="security-dashboard" data-security-dashboard-year-value="<%= @year_selected %>">
  <!-- Header - Mobile Optimized -->
  <div class="mb-4 sm:mb-6">
    <div class="flex items-center space-x-3 mb-2">
      <div class="w-10 h-10 bg-gradient-to-br from-indigo-500 to-purple-600 rounded-xl flex items-center justify-center shadow-sm">
        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
        </svg>
      </div>
      <div>
        <h1 class="text-xl sm:text-2xl font-bold text-gray-900">Dashboard Sekurity</h1>
        <p class="text-xs sm:text-sm text-gray-500">Kelola pembayaran iuran warga</p>
      </div>
    </div>
  </div>

  <!-- Block Tabs - Mobile Optimized -->
  <% if @accessible_blocks.any? %>
    <div class="mb-4">
      <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-2">
        <nav class="flex gap-2 overflow-x-auto scrollbar-hide" aria-label="Block tabs">
          <% @accessible_blocks.each do |block| %>
            <%
              block_addresses = @addresses_with_unpaid.select { |data| data[:address].block_letter == block }
              total_unpaid_in_block = block_addresses.sum { |data| data[:unpaid_months] }
            %>
            <%= link_to security_dashboard_index_path(block: block, search: @search_term),
                        class: "flex-shrink-0 px-4 py-2.5 text-sm font-medium rounded-lg transition-all whitespace-nowrap #{@selected_block == block ? 'bg-gradient-to-r from-indigo-500 to-purple-600 text-white shadow-md' : 'bg-gray-50 text-gray-600 hover:bg-gray-100 active:bg-gray-200'}" do %>
              <div class="flex items-center gap-2">
                <span class="text-base font-bold">Blok <%= block %></span>
                <% if total_unpaid_in_block > 0 %>
                  <span class="inline-flex items-center justify-center min-w-[20px] h-5 px-1.5 rounded-full text-xs font-bold <%= @selected_block == block ? 'bg-white text-red-600' : 'bg-red-100 text-red-800' %>">
                    <%= total_unpaid_in_block %>
                  </span>
                <% end %>
              </div>
            <% end %>
          <% end %>
        </nav>
      </div>
    </div>
  <% end %>

  <!-- Search Bar - Mobile Optimized -->
  <div class="mb-4 bg-white rounded-xl shadow-sm border border-gray-100 p-3">
    <%= form_with url: security_dashboard_index_path, method: :get, class: "flex flex-col sm:flex-row gap-2" do |f| %>
      <div class="flex-1">
        <%= f.text_field :search,
                        value: @search_term,
                        placeholder: "Cari alamat atau nama...",
                        class: "w-full px-4 py-2.5 border border-gray-200 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent text-sm",
                        data: {
                          security_dashboard_target: "searchInput",
                          action: "input->security-dashboard#search"
                        } %>
      </div>
      <%= f.hidden_field :year, value: @year_selected %>
      <%= f.hidden_field :block, value: @selected_block %>
      <button type="submit" class="px-4 py-2.5 bg-indigo-600 text-white text-sm font-medium rounded-lg hover:bg-indigo-700 active:bg-indigo-800 transition-colors flex items-center justify-center gap-2">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
        </svg>
        <span class="hidden sm:inline">Cari</span>
      </button>
    <% end %>

    <% if @search_term.present? %>
      <div class="mt-2 pt-2 border-t border-gray-100">
        <%= link_to security_dashboard_index_path(year: @year_selected, block: @selected_block),
                    class: "inline-flex items-center text-xs text-indigo-600 hover:text-indigo-800 font-medium" do %>
          <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
          </svg>
          Reset Pencarian
        <% end %>
      </div>
    <% end %>
  </div>

  <!-- Addresses Grid - Mobile Optimized -->
  <% if @addresses_with_unpaid.any? %>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-3">
      <% @addresses_with_unpaid.each do |data| %>
        <% address = data[:address] %>
        <% unpaid_months = data[:unpaid_months] %>
        <% arrears = data[:arrears] %>
        <% arrears_amount = data[:arrears_amount] %>
        <% total_unpaid_amount = data[:total_unpaid_amount] %>
        <%
          is_paid = unpaid_months == 0 && arrears == 0
        %>
        <%= link_to payment_security_dashboard_index_path(address_id: address.id),
                    class: "block bg-white rounded-xl shadow-sm border #{is_paid ? 'border-green-300 bg-green-50' : 'border-gray-100'} hover:shadow-md active:scale-[0.98] transition-all" do %>
          <div class="p-4">
            <!-- Address Header - Compact -->
            <div class="flex items-start justify-between mb-3">
              <div class="flex-1 min-w-0">
                <div class="flex items-center gap-2 mb-1">
                  <div class="w-8 h-8 bg-indigo-100 rounded-lg flex items-center justify-center flex-shrink-0">
                    <svg class="w-4 h-4 text-indigo-600" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"/>
                    </svg>
                  </div>
                  <h3 class="text-base font-bold text-gray-900 truncate"><%= address.block_address&.upcase %></h3>
                </div>
                <p class="text-xs text-gray-600 truncate ml-10">
                  <%= address.head_of_family&.name&.upcase || 'Tidak ada KK' %>
                </p>
              </div>
              <% if is_paid %>
                <div class="flex-shrink-0 ml-2">
                  <div class="bg-green-500 text-white text-xs font-bold px-2 py-1 rounded-lg flex items-center gap-1 shadow-sm">
                    <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                    </svg>
                    <span class="hidden sm:inline">Lunas</span>
                  </div>
                </div>
              <% elsif (unpaid_months + arrears) > 0 %>
                <div class="flex-shrink-0 ml-2">
                  <div class="bg-red-500 text-white text-xs font-bold px-2 py-1 rounded-lg shadow-sm">
                    <%= unpaid_months + arrears %>
                  </div>
                </div>
              <% end %>
            </div>

            <!-- Amount Card - Compact -->
            <div class="mb-3 p-3 <%= is_paid ? 'bg-white border-green-200' : 'bg-gradient-to-br from-red-50 to-rose-50 border-red-200' %> rounded-xl border">
              <div class="text-xs <%= is_paid ? 'text-green-700' : 'text-red-700' %> font-semibold mb-1.5">
                <%= is_paid ? 'Status Pembayaran' : 'Total Belum Dibayar' %>
              </div>
              <div class="text-lg sm:text-xl font-bold <%= is_paid ? 'text-green-700' : 'text-red-700' %>">
                <% if is_paid %>
                  ✓ Sudah Lunas
                <% else %>
                  Rp <%= number_with_delimiter(total_unpaid_amount, delimiter: '.') %>
                <% end %>
              </div>
              <% if total_unpaid_amount > 0 %>
                <div class="text-xs text-gray-600 mt-1.5 space-y-0.5">
                  <% if arrears > 0 %>
                    <div class="flex items-center justify-between">
                      <span>Tunggakan lama:</span>
                      <span class="font-medium"><%= arrears %> bln</span>
                    </div>
                  <% end %>
                  <% if unpaid_months > 0 %>
                    <div class="flex items-center justify-between">
                      <span>Tahun ini:</span>
                      <span class="font-medium"><%= unpaid_months %> bln</span>
                    </div>
                  <% end %>
                </div>
              <% else %>
                <div class="text-xs text-green-600 mt-1">
                  s/d <%= UserContribution::MONTHNAMES.invert[@current_month] %> <%= @current_year %>
                </div>
              <% end %>
            </div>

            <!-- Action Button - Compact -->
            <button class="w-full px-4 py-2.5 <%= is_paid ? 'bg-gradient-to-r from-green-500 to-emerald-600' : 'bg-gradient-to-r from-indigo-500 to-purple-600' %> text-white text-sm font-semibold rounded-lg transition-all shadow-sm hover:shadow-md flex items-center justify-center gap-2">
              <% if is_paid %>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
                </svg>
                <span>Bayar Bulan Depan</span>
              <% else %>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
                </svg>
                <span>Bayar Sekarang</span>
              <% end %>
            </button>
          </div>
        <% end %>
      <% end %>
    </div>

    <!-- Results Info - Compact -->
    <div class="mt-4 px-1">
      <div class="inline-flex items-center px-3 py-1.5 bg-blue-50 text-blue-700 text-xs font-medium rounded-lg border border-blue-200">
        <svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
        </svg>
        <span>
          <%= @addresses_with_unpaid.count %> alamat • Blok <%= @selected_block %>
          <% if @search_term.present? %>
            • "<span class="font-semibold"><%= @search_term %></span>"
          <% end %>
        </span>
      </div>
    </div>
  <% else %>
    <!-- Empty State - Modern -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-8 sm:p-12 text-center">
      <div class="w-16 h-16 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-4">
        <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4" />
        </svg>
      </div>
      <h3 class="text-base sm:text-lg font-semibold text-gray-900 mb-2">
        <% if @search_term.present? %>
          Tidak Ditemukan
        <% else %>
          Belum Ada Data
        <% end %>
      </h3>
      <p class="text-sm text-gray-500">
        <% if @search_term.present? %>
          Tidak ada hasil untuk "<span class="font-medium"><%= @search_term %></span>"
        <% else %>
          Belum ada alamat di Blok <%= @selected_block %>
        <% end %>
      </p>
    </div>
  <% end %>

  <!-- Payment Modal -->
  <div data-security-dashboard-target="paymentModal"
       class="hidden fixed inset-0 bg-gray-500 bg-opacity-75 overflow-y-auto z-50">
    <div class="flex min-h-screen items-center justify-center p-4">
      <div class="bg-white rounded-lg shadow-xl max-w-4xl w-full max-h-[90vh] overflow-y-auto">
        <!-- Modal Header -->
        <div class="sticky top-0 bg-white border-b border-gray-200 px-6 py-4 flex items-center justify-between">
          <h2 class="text-xl font-semibold text-gray-900" data-modal-title>Pembayaran Iuran</h2>
          <button type="button"
                  class="text-gray-400 hover:text-gray-500"
                  data-action="click->security-dashboard#closeModal">
            <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
        </div>

        <!-- Modal Body -->
        <div class="px-6 py-4">
          <!-- Address Info -->
          <div class="mb-6 p-4 bg-gray-50 rounded-lg" data-security-dashboard-target="addressInfo">
            <!-- Filled by JS -->
          </div>

          <!-- Payment Type Selection -->
          <div class="mb-6">
            <label class="block text-sm font-medium text-gray-700 mb-2">Metode Pembayaran</label>
            <select data-security-dashboard-target="paymentTypeSelect"
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent">
              <option value="1">Cash</option>
              <option value="2">Transfer</option>
            </select>
          </div>

          <!-- Future Months Toggle -->
          <div class="mb-6">
            <label class="flex items-center cursor-pointer">
              <input type="checkbox"
                     data-security-dashboard-target="futureToggle"
                     data-action="change->security-dashboard#toggleFutureMonths"
                     class="w-4 h-4 text-indigo-600 border-gray-300 rounded focus:ring-indigo-500">
              <span class="ml-2 text-sm text-gray-700">
                Tampilkan bulan-bulan mendatang (untuk bayar di muka)
              </span>
            </label>
          </div>

          <!-- Months Grid -->
          <div class="mb-6">
            <label class="block text-sm font-medium text-gray-700 mb-3">Pilih Bulan Pembayaran</label>
            <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-3"
                 data-security-dashboard-target="monthsGrid">
              <!-- Filled by JS -->
            </div>
          </div>

          <!-- Total Amount -->
          <div class="bg-indigo-50 rounded-lg p-4 mb-4">
            <div class="flex items-center justify-between">
              <span class="text-sm font-medium text-gray-700">Total Pembayaran:</span>
              <span class="text-2xl font-bold text-indigo-900">
                Rp <span data-security-dashboard-target="totalAmount">0</span>
              </span>
            </div>
          </div>
        </div>

        <!-- Modal Footer -->
        <div class="sticky bottom-0 bg-gray-50 border-t border-gray-200 px-6 py-4 flex gap-3 justify-end">
          <button type="button"
                  class="px-6 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-100 transition-colors"
                  data-action="click->security-dashboard#closeModal">
            Batal
          </button>
          <button type="button"
                  class="px-6 py-2 bg-indigo-600 text-white rounded-lg transition-colors opacity-50 cursor-not-allowed"
                  data-security-dashboard-target="submitButton"
                  data-action="click->security-dashboard#submitPayment"
                  disabled>
            Simpan Pembayaran
          </button>
        </div>
      </div>
    </div>
  </div>
</div>

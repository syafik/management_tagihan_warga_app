<div class="max-w-6xl mx-auto" data-controller="rekap-pembayaran toggle">
  <!-- Header -->
  <div class="mb-6">
    <%= link_to security_dashboard_index_path, class: "inline-flex items-center text-sm text-gray-600 hover:text-gray-900 mb-4" do %>
      <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
      </svg>
      Kembali ke Dashboard
    <% end %>

    <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between gap-4">
      <div>
        <h1 class="text-2xl font-bold text-gray-900">Daftar Pengeluaran</h1>
        <p class="text-sm text-gray-600 mt-1">Riwayat pengeluaran yang Anda catat</p>
      </div>

      <!-- Month Navigation -->
      <%= form_with url: new_expense_security_dashboard_index_path, method: :get, local: true,
          data: { rekap_pembayaran_target: "form" },
          class: "flex items-center gap-2" do |f| %>
        <%= hidden_field_tag :month, @month, data: { rekap_pembayaran_target: "monthInput" } %>
        <%= hidden_field_tag :year, @year, data: { rekap_pembayaran_target: "yearInput" } %>

        <button type="button"
                data-action="click->rekap-pembayaran#prevMonth"
                class="p-2 text-gray-600 hover:text-gray-900 hover:bg-gray-100 rounded-lg transition-colors">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
          </svg>
        </button>

        <div class="px-4 py-2 bg-white border border-gray-300 rounded-lg font-medium text-gray-900 min-w-[140px] text-center">
          <%= Date::MONTHNAMES[@month] %> <%= @year %>
        </div>

        <button type="button"
                data-action="click->rekap-pembayaran#nextMonth"
                class="p-2 text-gray-600 hover:text-gray-900 hover:bg-gray-100 rounded-lg transition-colors">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
          </svg>
        </button>
      <% end %>
    </div>
  </div>

  <% is_current_month = (@year == Date.current.year && @month == Date.current.month) %>

  <!-- Toggle Form Button (only for current month) -->
  <% if is_current_month %>
    <div class="mb-4">
      <button type="button"
              data-action="click->toggle#toggle"
              class="w-full lg:w-auto px-6 py-3 bg-red-600 text-white font-medium rounded-lg hover:bg-red-700 transition-colors flex items-center justify-center gap-2">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
        </svg>
        Tambah Pengeluaran
      </button>
    </div>

    <!-- Form Card (Collapsible) -->
    <div class="hidden mb-6" data-toggle-target="content">
    <div class="bg-white rounded-lg shadow-lg overflow-hidden">
      <div class="bg-gradient-to-r from-red-500 to-red-600 px-6 py-4">
        <h2 class="text-lg font-semibold text-white flex items-center">
          <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
            <path d="M9 2a1 1 0 000 2h2a1 1 0 100-2H9z"/>
            <path fill-rule="evenodd" d="M4 5a2 2 0 012-2 3 3 0 003 3h2a3 3 0 003-3 2 2 0 012 2v11a2 2 0 01-2 2H6a2 2 0 01-2-2V5zm3 4a1 1 0 000 2h.01a1 1 0 100-2H7zm3 0a1 1 0 000 2h3a1 1 0 100-2h-3zm-3 4a1 1 0 100 2h.01a1 1 0 100-2H7zm3 0a1 1 0 100 2h3a1 1 0 100-2h-3z" clip-rule="evenodd"/>
          </svg>
          Form Pengeluaran
        </h2>
      </div>

      <%= form_with url: create_expense_security_dashboard_index_path, method: :post, local: true, class: "p-6 space-y-6" do |f| %>
        <!-- Tanggal Transaksi -->
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">
            Tanggal Transaksi
            <span class="text-red-500">*</span>
          </label>
          <%= date_field_tag :transaction_date, Date.current,
              class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-red-500" %>
        </div>

        <!-- Kategori -->
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">
            Kategori Pengeluaran
          </label>
          <%= hidden_field_tag :category, 'LAIN-LAIN' %>
          <div class="w-full px-4 py-3 border border-gray-300 rounded-lg bg-gray-50 text-gray-700 font-medium">
            LAIN-LAIN
          </div>
          <p class="mt-1 text-sm text-gray-500">Semua pengeluaran akan dicatat dalam kategori ini</p>
        </div>

        <!-- Total -->
        <div data-controller="currency-input">
          <label class="block text-sm font-medium text-gray-700 mb-2">
            Jumlah Pengeluaran (Rp)
            <span class="text-red-500">*</span>
          </label>
          <%= text_field_tag :total_display, nil,
              placeholder: "Contoh: 500.000",
              required: true,
              data: {
                currency_input_target: "display",
                action: "input->currency-input#format"
              },
              class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-red-500" %>
          <%= hidden_field_tag :total, nil, data: { currency_input_target: "hidden" } %>
          <p class="mt-1 text-sm text-gray-500">Format otomatis: 500.000</p>
        </div>

        <!-- Deskripsi -->
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">
            Deskripsi / Keterangan
            <span class="text-red-500">*</span>
          </label>
          <%= text_area_tag :description, nil,
              placeholder: "Contoh: Pembelian sabun cuci tangan untuk pos security",
              rows: 4,
              required: true,
              class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-red-500" %>
          <p class="mt-1 text-sm text-gray-500">Jelaskan secara detail untuk apa pengeluaran ini</p>
        </div>

        <!-- Info Box -->
        <div class="bg-yellow-50 border-l-4 border-yellow-400 p-4 rounded">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
              </svg>
            </div>
            <div class="ml-3">
              <p class="text-sm text-yellow-700">
                <strong>Perhatian:</strong> Pastikan data yang diinput sudah benar. Transaksi yang sudah tercatat akan masuk ke sistem keuangan.
              </p>
            </div>
          </div>
        </div>

        <!-- Action Buttons -->
        <div class="flex gap-3 pt-4 border-t border-gray-200">
          <button type="button"
                  data-action="click->toggle#toggle"
                  class="flex-1 px-6 py-3 border-2 border-gray-300 text-gray-700 font-medium rounded-lg hover:bg-gray-100 transition-colors text-center">
            Batal
          </button>
          <%= f.submit "Simpan Pengeluaran",
              class: "flex-1 px-6 py-3 bg-red-600 text-white font-medium rounded-lg hover:bg-red-700 transition-colors",
              data: { confirm: "Apakah Anda yakin data pengeluaran sudah benar?" } %>
        </div>
      <% end %>
    </div>
  </div>
  <% end %>

  <!-- Total Pengeluaran Card -->
  <div class="mb-6">
    <div class="bg-gradient-to-br from-red-500 to-red-600 rounded-lg shadow-lg p-6 text-white">
      <div class="flex items-center justify-between">
        <div class="flex-1">
          <p class="text-sm text-red-100 mb-2">Total Pengeluaran Bulan Ini</p>
          <p class="text-3xl lg:text-4xl font-bold">Rp <%= number_with_delimiter(@total_expenses, delimiter: '.') %></p>
        </div>
        <div class="bg-white/20 p-4 rounded-lg">
          <svg class="w-10 h-10 lg:w-12 lg:h-12" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M4 4a2 2 0 00-2 2v4a2 2 0 002 2V6h10a2 2 0 00-2-2H4zm2 6a2 2 0 012-2h8a2 2 0 012 2v4a2 2 0 01-2 2H8a2 2 0 01-2-2v-4zm6 4a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"/>
          </svg>
        </div>
      </div>
    </div>
  </div>

  <!-- Expense List -->
  <% if @expenses.any? %>
    <!-- Mobile View - Card Based -->
    <div class="lg:hidden">
      <div class="space-y-3 p-4">
        <% @expenses.each do |expense| %>
          <div class="bg-white border border-gray-200 rounded-lg p-4 shadow-sm">
            <div class="flex justify-between items-start mb-3">
              <div class="flex-1">
                <div class="text-sm font-medium text-gray-900 mb-1">
                  <%= expense.transaction_date.strftime('%d %B %Y') %>
                </div>
              </div>
              <div class="text-right">
                <div class="text-lg font-bold text-red-600">
                  Rp <%= number_with_delimiter(expense.total, delimiter: '.') %>
                </div>
              </div>
            </div>
            <div class="pt-3 border-t border-gray-100">
              <div class="text-sm text-gray-700">
                <%= expense.description %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Desktop View - Table -->
    <div class="hidden lg:block">
      <div class="bg-white rounded-lg shadow overflow-hidden">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Tanggal
              </th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Deskripsi
              </th>
              <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                Jumlah
              </th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @expenses.each do |expense| %>
              <tr class="hover:bg-gray-50">
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                  <%= expense.transaction_date.strftime('%d %B %Y') %>
                </td>
                <td class="px-6 py-4 text-sm text-gray-700">
                  <%= expense.description %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-right font-semibold text-red-600">
                  Rp <%= number_with_delimiter(expense.total, delimiter: '.') %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  <% else %>
    <!-- Empty State -->
    <div class="bg-white rounded-lg shadow p-12 text-center">
      <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
      </svg>
      <h3 class="mt-2 text-sm font-medium text-gray-900">Belum ada pengeluaran</h3>
      <p class="mt-1 text-sm text-gray-500">
        Belum ada pengeluaran yang tercatat untuk bulan <%= Date::MONTHNAMES[@month] %> <%= @year %>
      </p>
      <% if is_current_month %>
        <div class="mt-6">
          <button type="button"
                  data-action="click->toggle#toggle"
                  class="inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
            </svg>
            Tambah Pengeluaran Pertama
          </button>
        </div>
      <% end %>
    </div>
  <% end %>
</div>

<div class="max-w-7xl mx-auto" data-controller="rekap-pembayaran">
  <!-- Header -->
  <div class="mb-6">
    <%= link_to security_dashboard_index_path, class: "inline-flex items-center text-sm text-gray-600 hover:text-gray-900 mb-4" do %>
      <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
      </svg>
      Kembali ke Dashboard
    <% end %>

    <h1 class="text-2xl font-bold text-gray-900">Rekap Pembayaran</h1>
    <p class="text-sm text-gray-600 mt-1">Laporan pembayaran yang saya terima per bulan</p>
  </div>

  <!-- Month Navigation & Block Filter -->
  <div class="mb-6 bg-white rounded-lg shadow p-4">
    <%= form_with url: rekap_pembayaran_security_dashboard_index_path, method: :get, local: true, data: { rekap_pembayaran_target: "form" }, class: "space-y-4" do |f| %>
      <!-- Month Navigation -->
      <div class="flex items-center justify-center space-x-6">
        <button type="button"
                class="px-4 py-2 bg-indigo-600 text-white rounded-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors"
                data-action="click->rekap-pembayaran#prevMonth">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
          </svg>
        </button>

        <div class="text-center min-w-[200px]">
          <h3 class="text-xl font-bold text-gray-900" data-rekap-pembayaran-target="monthDisplay">
            <%= UserContribution::MONTHNAMES.invert[@month_selected] %> <%= @year_selected %>
          </h3>
        </div>

        <button type="button"
                class="px-4 py-2 bg-indigo-600 text-white rounded-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors"
                data-action="click->rekap-pembayaran#nextMonth">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
          </svg>
        </button>
      </div>

      <%= hidden_field_tag :month, @month_selected, data: { rekap_pembayaran_target: "monthInput" } %>
      <%= hidden_field_tag :year, @year_selected, data: { rekap_pembayaran_target: "yearInput" } %>

      <!-- Block Filter -->
      <div class="flex items-center justify-center gap-3 flex-wrap">
        <label class="text-sm font-medium text-gray-700">Filter Block:</label>
        <div class="flex gap-2 flex-wrap">
          <% @accessible_blocks.each do |block| %>
            <%= link_to "Blok #{block}", rekap_pembayaran_security_dashboard_index_path(month: @month_selected, year: @year_selected, block: block),
                class: "px-4 py-2 text-sm font-medium rounded-lg transition-colors #{@selected_block == block ? 'bg-indigo-600 text-white' : 'bg-gray-100 text-gray-700 hover:bg-gray-200'}" %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Summary Cards -->
  <div class="grid grid-cols-2 lg:grid-cols-4 gap-3 lg:gap-4 mb-6">
    <div class="bg-gradient-to-br from-green-500 to-green-600 rounded-lg shadow-lg p-4 lg:p-6 text-white">
      <div class="flex items-center justify-between mb-2">
        <div class="text-green-100 text-xs lg:text-sm font-medium">Cash</div>
        <svg class="w-6 h-6 lg:w-8 lg:h-8 text-green-100" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z"/>
        </svg>
      </div>
      <div class="text-xl lg:text-3xl font-bold">Rp <%= number_with_delimiter(@total_cash, delimiter: '.') %></div>
    </div>

    <div class="bg-gradient-to-br from-red-500 to-red-600 rounded-lg shadow-lg p-4 lg:p-6 text-white">
      <div class="flex items-center justify-between mb-2">
        <div class="text-red-100 text-xs lg:text-sm font-medium">Pengeluaran</div>
        <svg class="w-6 h-6 lg:w-8 lg:h-8 text-red-100" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 14l6-6m-5.5.5h.01m4.99 5h.01M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16l3.5-2 3.5 2 3.5-2 3.5 2zM10 8.5a.5.5 0 11-1 0 .5.5 0 011 0zm5 5a.5.5 0 11-1 0 .5.5 0 011 0z"/>
        </svg>
      </div>
      <div class="text-xl lg:text-3xl font-bold">Rp <%= number_with_delimiter(@total_expenses, delimiter: '.') %></div>
    </div>

    <div class="bg-gradient-to-br from-blue-500 to-blue-600 rounded-lg shadow-lg p-4 lg:p-6 text-white">
      <div class="flex items-center justify-between mb-2">
        <div class="text-blue-100 text-xs lg:text-sm font-medium">Transfer</div>
        <svg class="w-6 h-6 lg:w-8 lg:h-8 text-blue-100" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"/>
        </svg>
      </div>
      <div class="text-xl lg:text-3xl font-bold">Rp <%= number_with_delimiter(@total_transfer, delimiter: '.') %></div>
    </div>

    <div class="bg-gradient-to-br from-purple-500 to-purple-600 rounded-lg shadow-lg p-4 lg:p-6 text-white">
      <div class="flex items-center justify-between mb-2">
        <div class="text-purple-100 text-xs lg:text-sm font-medium">Total Setoran</div>
        <svg class="w-6 h-6 lg:w-8 lg:h-8 text-purple-100" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
      </div>
      <div class="text-xl lg:text-3xl font-bold">Rp <%= number_with_delimiter(@grand_total, delimiter: '.') %></div>
      <div class="text-xs text-purple-100 mt-1">Cash - Pengeluaran</div>
    </div>
  </div>

  <!-- Payment List by Block -->
  <% if @payments_by_block.any? %>
    <% @accessible_blocks.each do |block| %>
      <% block_payments = @payments_by_block[block] || [] %>
      <% next if block_payments.empty? %>

      <div class="mb-6 bg-white rounded-lg shadow overflow-hidden">
        <!-- Block Header -->
        <div class="bg-gradient-to-r from-indigo-600 to-indigo-700 px-6 py-4">
          <div class="flex items-center justify-between">
            <div>
              <h2 class="text-lg font-bold text-white">Blok <%= block %></h2>
              <p class="text-sm text-indigo-100"><%= block_payments.count %> transaksi</p>
            </div>
            <div class="text-right">
              <div class="text-sm text-indigo-100">Total Blok</div>
              <div class="text-xl font-bold text-white">
                Rp <%= number_with_delimiter(@block_totals[block][:total], delimiter: '.') %>
              </div>
            </div>
          </div>
        </div>

        <!-- Block Summary -->
        <div class="bg-indigo-50 px-6 py-3 border-b border-indigo-100">
          <div class="flex gap-6 text-sm">
            <div class="flex items-center">
              <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-green-100 text-green-800 mr-2">
                Cash
              </span>
              <span class="font-semibold text-gray-900">Rp <%= number_with_delimiter(@block_totals[block][:cash], delimiter: '.') %></span>
            </div>
            <div class="flex items-center">
              <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-blue-100 text-blue-800 mr-2">
                Transfer
              </span>
              <span class="font-semibold text-gray-900">Rp <%= number_with_delimiter(@block_totals[block][:transfer], delimiter: '.') %></span>
            </div>
          </div>
        </div>

        <!-- Mobile View - Card Based -->
        <div class="lg:hidden">
          <div class="space-y-3 p-4">
            <% block_payments.each do |payment| %>
              <div class="bg-white border border-gray-200 rounded-lg p-4 hover:shadow-md transition-shadow">
                <!-- Header Row -->
                <div class="flex items-start justify-between mb-3">
                  <div class="flex-1">
                    <div class="text-sm font-bold text-gray-900"><%= payment.address.block_address&.upcase %></div>
                    <div class="text-xs text-gray-500"><%= payment.address.head_of_family&.name&.upcase || '-' %></div>
                  </div>
                  <div class="text-right">
                    <div class="text-lg font-bold text-indigo-600">
                      Rp <%= number_with_delimiter(payment.contribution, delimiter: '.') %>
                    </div>
                  </div>
                </div>

                <!-- Details Row -->
                <div class="grid grid-cols-2 gap-3 pt-3 border-t border-gray-100">
                  <div>
                    <div class="text-xs text-gray-500">Tanggal</div>
                    <div class="text-sm font-medium text-gray-900"><%= payment.pay_at&.strftime('%d/%m/%Y') || '-' %></div>
                  </div>
                  <div>
                    <div class="text-xs text-gray-500">Bulan Iuran</div>
                    <div class="text-sm font-medium text-gray-900"><%= UserContribution::MONTHNAMES.invert[payment.month] %> <%= payment.year %></div>
                  </div>
                </div>

                <!-- Payment Method -->
                <div class="mt-3 pt-3 border-t border-gray-100">
                  <% if payment.payment_type == 1 %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                      💵 Cash
                    </span>
                  <% else %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                      💳 Transfer
                    </span>
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>
        </div>

        <!-- Desktop View - Table -->
        <div class="hidden lg:block overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Tanggal</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Alamat</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Bulan</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Metode</th>
                <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Jumlah</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% block_payments.each do |payment| %>
                <tr class="hover:bg-gray-50">
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                    <%= payment.pay_at&.strftime('%d/%m/%Y') || '-' %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm font-medium text-gray-900"><%= payment.address.block_address&.upcase %></div>
                    <div class="text-sm text-gray-500"><%= payment.address.head_of_family&.name&.upcase || '-' %></div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                    <%= UserContribution::MONTHNAMES.invert[payment.month] %> <%= payment.year %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <% if payment.payment_type == 1 %>
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                        Cash
                      </span>
                    <% else %>
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                        Transfer
                      </span>
                    <% end %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-right font-semibold text-gray-900">
                    Rp <%= number_with_delimiter(payment.contribution, delimiter: '.') %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    <% end %>
  <% else %>
    <div class="bg-white rounded-lg shadow p-12 text-center">
      <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
      </svg>
      <h3 class="mt-2 text-sm font-medium text-gray-900">Tidak ada data</h3>
      <p class="mt-1 text-sm text-gray-500">
        Belum ada pembayaran yang diterima untuk bulan <%= UserContribution::MONTHNAMES.invert[@month_selected] %> <%= @year_selected %>
      </p>
    </div>
  <% end %>
</div>

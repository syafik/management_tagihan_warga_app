<div class="max-w-4xl mx-auto px-1 sm:px-3 py-3" data-controller="payment-wizard">
  <!-- Header - Mobile Optimized -->
  <div class="mb-4">
    <%= link_to security_dashboard_index_path, class: "inline-flex items-center gap-1 text-xs font-semibold text-indigo-600 hover:text-indigo-700 mb-3 underline underline-offset-4" do %>
      <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
      </svg>
      Kembali
    <% end %>

    <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-4">
      <h1 class="text-lg sm:text-xl font-bold text-gray-900">Pembayaran Iuran</h1>
      <div class="mt-2 flex items-center gap-2">
        <div class="w-8 h-8 bg-indigo-100 rounded-lg flex items-center justify-center flex-shrink-0">
          <svg class="w-4 h-4 text-indigo-600" fill="currentColor" viewBox="0 0 20 20">
            <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"/>
          </svg>
        </div>
        <div>
          <div class="text-base font-bold text-gray-900"><%= @address.block_address&.upcase %></div>
          <div class="text-xs text-gray-600"><%= @address.head_of_family&.name&.upcase || 'Tidak ada KK' %></div>
        </div>
      </div>
    </div>
  </div>

  <!-- Floating Summary Card -->
  <div class="sticky top-4 z-10 mb-4">
    <div class="bg-gradient-to-r from-indigo-500 to-purple-600 rounded-xl shadow-lg p-4 text-white">
      <div class="flex items-center justify-between">
        <div>
          <div class="text-xs text-indigo-100">Total Dipilih</div>
          <div class="text-2xl sm:text-3xl font-bold" data-payment-wizard-target="totalAmount">Rp 0</div>
          <div class="text-xs text-indigo-100 mt-1" data-payment-wizard-target="itemCount">0 item</div>
        </div>
        <div class="w-12 h-12 bg-white/20 rounded-xl flex items-center justify-center backdrop-blur-sm">
          <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20">
            <path d="M4 4a2 2 0 00-2 2v1h16V6a2 2 0 00-2-2H4z"/>
            <path fill-rule="evenodd" d="M18 9H2v5a2 2 0 002 2h12a2 2 0 002-2V9zM4 13a1 1 0 011-1h1a1 1 0 110 2H5a1 1 0 01-1-1zm5-1a1 1 0 100 2h1a1 1 0 100-2H9z" clip-rule="evenodd"/>
          </svg>
        </div>
      </div>
    </div>
  </div>

  <%= form_with url: confirm_payment_security_dashboard_index_path, method: :post, data: { payment_wizard_target: "form", turbo: false } do |f| %>
    <%= f.hidden_field :address_id, value: @address.id %>
    <%= f.hidden_field :payment_type, value: 1, data: { payment_wizard_target: "paymentTypeField" } %>

    <!-- Tanggal Pembayaran -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-4 mb-3">
      <label class="block text-sm font-semibold text-gray-800 mb-2">Tanggal Pembayaran</label>
      <%= date_field_tag :pay_at,
          Date.current,
          class: "w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-sm" %>
      <p class="mt-2 text-xs text-gray-500">Default hari ini, bisa diubah jika diperlukan.</p>
    </div>

    <!-- STEP 1: Selection -->
    <div class="space-y-3" data-payment-wizard-target="step1">
      <!-- Section: Tunggakan Lama (Collapsible) -->
      <% if @arrears_months > 0 %>
        <div class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden" data-controller="collapsible">
          <!-- Collapsible Header -->
          <button type="button"
                  class="w-full bg-gradient-to-r from-red-500 to-rose-600 px-4 py-3 flex items-center justify-between hover:from-red-600 hover:to-rose-700 active:from-red-700 active:to-rose-800 transition-all"
                  data-action="click->collapsible#toggle">
            <div class="flex items-center">
              <svg class="w-5 h-5 mr-2 text-white" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
              </svg>
              <div class="text-left">
                <h2 class="text-base font-bold text-white">Tunggakan Lama</h2>
                <p class="text-xs text-red-100">Dari tahun sebelumnya - Klik untuk expand</p>
              </div>
            </div>
            <svg class="w-6 h-6 text-white transform transition-transform duration-200"
                 data-collapsible-target="icon"
                 fill="none"
                 stroke="currentColor"
                 viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
            </svg>
          </button>

          <!-- Collapsible Content (Collapsed by default using max-height) -->
          <div data-collapsible-target="content">
            <div class="p-4">
              <div class="flex items-center justify-between mb-3">
                <span class="text-xs font-bold text-gray-500 uppercase tracking-wider">Tunggakan Lama</span>
                <button type="button"
                        class="px-3 py-1 bg-red-100 hover:bg-red-200 rounded-lg text-xs font-semibold text-red-700 transition-colors"
                        data-action="click->payment-wizard#selectAllArrears">
                  Pilih Semua
                </button>
              </div>

              <div class="grid grid-cols-3 sm:grid-cols-3 gap-2">
                <% @arrears_months.times do |index| %>
                  <%
                    arrears_index = index + 1
                    # Use @arrears_rate from controller (Januari rate = 175k)
                  %>
                  <label class="month-card flex items-center justify-between gap-2 p-2 border-2 border-red-300 rounded-lg bg-red-50 cursor-pointer hover:shadow-md active:scale-[0.98] transition-all"
                         data-payment-wizard-target="monthCard">
                    <div class="min-w-0 flex-1">
                      <div class="font-semibold text-gray-900 text-xs leading-tight">Tunggakan <%= arrears_index %></div>
                      <div class="text-[11px] text-red-700 font-semibold leading-tight">
                        <%= format_compact_currency(@arrears_rate) %>
                      </div>
                    </div>
                    <%= check_box_tag "pay_arrears[]", arrears_index, false,
                        class: "month-checkbox h-4 w-4 text-red-600 border-red-300 rounded",
                        data: {
                          payment_wizard_target: "arrearsCheckbox",
                          amount: @arrears_rate,
                          action: "change->payment-wizard#updateTotal change->payment-wizard#toggleCard"
                        } %>
                  </label>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>

      <!-- Section: Belum Bayar -->
      <% if @unpaid_months.any? %>
        <div class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden">
          <div class="bg-gradient-to-r from-orange-500 to-amber-600 px-4 py-3">
            <div class="flex items-center justify-between">
              <div>
                <h2 class="text-base font-bold text-white flex items-center">
                  <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"/>
                  </svg>
                  Belum Bayar
                </h2>
                <p class="text-xs text-orange-100 mt-1">Bulan yang sudah jatuh tempo</p>
              </div>
              <button type="button"
                      class="px-3 py-1 bg-white/20 hover:bg-white/30 rounded-lg text-xs font-semibold text-white backdrop-blur-sm transition-colors"
                      data-action="click->payment-wizard#selectAllUnpaid">
                Pilih Semua
              </button>
            </div>
          </div>
          <div class="p-4">
            <div class="space-y-3">
              <% @unpaid_months.group_by { |m| m[:year] }.sort.reverse.each do |year, months| %>
                <div>
                  <div class="text-xs font-bold text-gray-500 uppercase tracking-wider mb-2 px-1">
                    Tahun <%= year %>
                  </div>
                  <div class="grid grid-cols-3 sm:grid-cols-3 gap-2">
                    <% months.each do |month_data| %>
                      <%
                        month = month_data[:month]
                        contribution_rate = @address.expected_contribution_for(month, year)
                      %>
                      <label class="month-card flex items-center justify-between gap-2 p-2 border-2 border-orange-200 rounded-lg bg-gradient-to-br from-orange-50 to-amber-50 cursor-pointer hover:shadow-md active:scale-[0.98] transition-all"
                             data-payment-wizard-target="monthCard">
                        <div class="min-w-0 flex-1">
                          <div class="font-semibold text-gray-900 text-xs leading-tight"><%= UserContribution::MONTHNAMES.invert[month] %></div>
                          <div class="text-[11px] text-orange-700 font-semibold leading-tight">
                            <%= format_compact_currency(contribution_rate) %>
                          </div>
                        </div>
                        <%= check_box_tag "unpaid_months[]", "#{month},#{year}", false,
                            class: "month-checkbox h-4 w-4 text-orange-600 border-orange-300 rounded",
                            data: {
                              payment_wizard_target: "unpaidCheckbox",
                              amount: contribution_rate,
                              action: "change->payment-wizard#updateTotal change->payment-wizard#toggleCard"
                            } %>
                      </label>
                    <% end %>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>

      <!-- Section: Bayar Bulan Lain di Tahun Depan (Collapsible) -->
      <% if @next_year_months.any? %>
        <div class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden" data-controller="collapsible">
          <!-- Collapsible Header -->
          <button type="button"
                  class="w-full bg-gradient-to-r from-blue-500 to-indigo-600 px-4 py-3 flex items-center justify-between hover:from-blue-600 hover:to-indigo-700 active:from-blue-700 active:to-indigo-800 transition-all"
                  data-action="click->collapsible#toggle">
            <div class="flex items-center">
              <svg class="w-5 h-5 mr-2 text-white" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"/>
              </svg>
              <div class="text-left">
                <h2 class="text-base font-bold text-white">Bayar Bulan Lain di <%= @current_year + 1 %></h2>
                <p class="text-xs text-blue-100">Bayar di muka untuk tahun depan - Klik untuk expand</p>
              </div>
            </div>
            <svg class="w-6 h-6 text-white transform transition-transform duration-200"
                 data-collapsible-target="icon"
                 fill="none"
                 stroke="currentColor"
                 viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
            </svg>
          </button>

          <!-- Collapsible Content (Collapsed by default using max-height) -->
          <div data-collapsible-target="content">
            <div class="p-4">
              <div class="mb-3 p-3 bg-blue-50 border border-blue-200 rounded-lg">
                <p class="text-xs text-blue-800">
                  <strong>ðŸ’¡ Info:</strong> Bayar bulan-bulan di tahun <%= @current_year + 1 %> untuk kemudahan pembayaran di muka.
                </p>
              </div>

              <div class="flex items-center justify-between mb-3">
                <span class="text-xs font-bold text-gray-500 uppercase tracking-wider">Tahun <%= @current_year + 1 %></span>
                <button type="button"
                        class="px-3 py-1 bg-blue-100 hover:bg-blue-200 rounded-lg text-xs font-semibold text-blue-700 transition-colors"
                        data-action="click->payment-wizard#selectAllNextYear">
                  Pilih Semua
                </button>
              </div>

              <div class="grid grid-cols-3 sm:grid-cols-3 gap-2">
                <% @next_year_months.each do |month_data| %>
                  <label class="month-card flex items-center justify-between gap-2 p-2 border-2 border-blue-200 rounded-lg bg-gradient-to-br from-blue-50 to-indigo-50 cursor-pointer hover:shadow-md active:scale-[0.98] transition-all"
                         data-payment-wizard-target="monthCard">
                    <div class="min-w-0 flex-1">
                      <div class="font-semibold text-gray-900 text-xs leading-tight"><%= month_data[:month_text] %></div>
                      <div class="text-[11px] text-blue-700 font-semibold leading-tight">
                        <%= format_compact_currency(month_data[:contribution_rate]) %>
                      </div>
                    </div>
                    <%= check_box_tag "future_months[]", "#{month_data[:month]},#{month_data[:year]}", false,
                        class: "month-checkbox h-4 w-4 text-blue-600 border-blue-300 rounded",
                        data: {
                          payment_wizard_target: "nextYearCheckbox",
                          amount: month_data[:contribution_rate],
                          action: "change->payment-wizard#updateTotal change->payment-wizard#toggleCard"
                        } %>
                  </label>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Payment Method Selection (if applicable) -->
    <% if current_user.allow_manage_transfer %>
      <div class="mb-4 bg-white rounded-xl shadow-sm border border-gray-100 p-4">
        <label class="block text-sm font-semibold text-gray-700 mb-3">Metode Pembayaran</label>
        <div class="grid grid-cols-2 gap-2">
          <label class="payment-method-card relative block p-3 border-2 border-green-200 rounded-xl cursor-pointer hover:shadow-md transition-all bg-green-50"
                 data-payment-wizard-target="paymentCard">
            <%= f.radio_button :payment_type, 1, checked: true, class: "hidden payment-radio",
                data: { action: "change->payment-wizard#togglePaymentMethod" } %>
            <div class="flex flex-col items-center text-center">
              <div class="payment-icon w-10 h-10 bg-green-500 rounded-lg flex items-center justify-center mb-2 transition-colors">
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z"/>
                </svg>
              </div>
              <span class="font-semibold text-sm text-gray-900">Cash</span>
            </div>
          </label>

          <label class="payment-method-card relative block p-3 border-2 border-gray-200 rounded-xl cursor-pointer hover:shadow-md transition-all"
                 data-payment-wizard-target="paymentCard">
            <%= f.radio_button :payment_type, 2, class: "hidden payment-radio",
                data: { action: "change->payment-wizard#togglePaymentMethod" } %>
            <div class="flex flex-col items-center text-center">
              <div class="payment-icon w-10 h-10 bg-blue-100 rounded-lg flex items-center justify-center mb-2 transition-colors">
                <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"/>
                </svg>
              </div>
              <span class="font-semibold text-sm text-gray-900">Transfer</span>
            </div>
          </label>
        </div>
      </div>
    <% else %>
      <%= f.hidden_field :payment_type, value: 1 %>
    <% end %>

    <!-- Total & Actions - Mobile Optimized -->
    <div class="sticky bottom-0 bg-white border-t-4 border-indigo-600 rounded-t-lg shadow-xl p-4 sm:p-6">
      <!-- Total Amount -->
      <div class="mb-4 flex items-center justify-between">
        <div>
          <div class="text-xs sm:text-sm text-gray-600">Total Pembayaran</div>
          <div class="text-2xl sm:text-4xl font-bold text-indigo-600" data-payment-wizard-target="totalAmountBottom">
            Rp 0
          </div>
        </div>
        <div class="text-right">
          <div class="text-xs sm:text-sm text-gray-500" data-payment-wizard-target="itemCountBottom">
            0 item
          </div>
        </div>
      </div>

      <!-- Action Buttons -->
      <div class="flex flex-col sm:flex-row gap-2 sm:gap-3">
        <%= link_to "Batal", security_dashboard_index_path,
            class: "w-full sm:flex-1 px-4 py-3 border-2 border-gray-300 text-gray-700 text-sm sm:text-base font-medium rounded-lg hover:bg-gray-100 active:bg-gray-200 transition-colors text-center" %>
        <%= f.submit "Lanjutkan",
            class: "w-full sm:flex-1 px-4 py-3 bg-indigo-600 text-white text-sm sm:text-base font-medium rounded-lg hover:bg-indigo-700 active:bg-indigo-800 transition-colors disabled:opacity-50 disabled:cursor-not-allowed",
            data: { payment_wizard_target: "submitButton" },
            disabled: true %>
      </div>
    </div>
  <% end %>
</div>
